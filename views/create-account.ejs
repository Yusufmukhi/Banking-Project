<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Add Account</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-slate-50 to-slate-100 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-8 py-4 flex justify-between items-center border-b border-slate-200">
    <div class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">BankTrust</div>

    <div class="text-right">
      <p class="font-semibold text-gray-900"><%= customers.username %></p>
      <p class="text-xs text-gray-500">Customer ID: <%= customers.cif %></p>
    </div>
  </header>

  <div class="flex">

    <!-- SIDEBAR WITH ICONS -->
     <aside class="w-64 bg-white shadow-lg min-h-screen p-6 border-r border-slate-200">
      <h2 class="font-bold text-gray-900 mb-6 text-lg uppercase tracking-wider text-sm">Navigation</h2>

      <ul class="space-y-2 text-gray-700 text-sm">
        <li><a href="/dashboard" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
          <!-- Added dashboard icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m0 4a2 2 0 100-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
          </svg>
          Dashboard
        </a></li>
        <li><a href="/accounts/<%=id%>" class="flex items-center gap-3 px-4 py-3 bg-blue-50 text-blue-700 rounded-lg font-semibold border-l-4 border-blue-600 transition-all" >
          <!-- Added accounts icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
          </svg>
          Accounts
        </a></li>
        <li><a href="/upi/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
          <!-- Added UPI icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          UPI
        </a></li>
        <li><a href="/deposits/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
          <!-- Added deposits icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Deposits
        </a></li>
        <li><a href="/loans/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
          <!-- Added loans icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Loans
        </a></li>
        <li><a href="/transfers/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
          <!-- Added transfers icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          Transfers
        </a></li>
        <li><a href="/statements/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
          <!-- Added statements icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Statements
        </a></li>
        <li><a href="/profile/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
          <!-- Added profile icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          Profile
        </a></li>
        <li><a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200">
          <!-- Added logout icon -->
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Logout
        </a></li>
      </ul>
      <hr class="my-6 border-slate-200">

      <ul class="text-sm space-y-2">
        <li><a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
          <!-- Added lock icon for block card -->
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 0v2m0-2h2m-2 0h-2m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Block Debit Card
        </a></li>
        <li><a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
          <!-- Added alert icon for fraud report -->
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 0v2m0-2h2m-2 0h-2m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Report Fraud
        </a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-8">

      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Open New Account</h1>
        <p class="text-gray-600 mt-2">Create a new savings or current account in just a few steps</p>
      </div>

      <section class="bg-white p-8 rounded-xl shadow-md border border-slate-200 max-w-2xl">

        <form action="/create-account/<%=id%>" method="POST" class="space-y-6">

          <!-- ACCOUNT TYPE -->
          <label class="block">
            <span class="font-semibold text-gray-900 block mb-2">Account Type</span>
            <select
              class="w-full border border-slate-300 rounded-lg p-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              name="account_type">
              <option>Savings Account</option>
              <option>Current Account</option>
            </select>
             <% if(error.account_type){ %><p class="text-red-500 text-sm mt-1 font-medium"><%= error.account_type %></p><% } %>
          </label>

          <!-- INITIAL DEPOSIT -->
          <label class="block">
            <span class="font-semibold text-gray-900 block mb-2">Initial Deposit (₹)</span>
            <input
              type="number"
              class="w-full border border-slate-300 rounded-lg p-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              placeholder="Minimum ₹2000"
              name="initialAmount">
              <% if(error.initialAmount){ %><p class="text-red-500 text-sm mt-1 font-medium"><%= error.initialAmount %></p><% } %>
          </label>

          <!-- BRANCH -->
          <label class="block">
            <span class="font-semibold text-gray-900 block mb-2">Select Branch</span>
            <select
              class="w-full border border-slate-300 rounded-lg p-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              name="branch">
              <option value="">Choose Branch</option>
                <% [
                  "101|Mumbai – Main Branch",
                  "102|Delhi – Connaught Place",
                  "103|Bangalore – HSR Layout",
                  "104|Hyderabad – Madhapur",
                  "105|Chennai – T. Nagar",
                  "106|Kolkata – Park Street",
                  "107|Pune – Shivaji Nagar",
                  "108|Ahmedabad – C.G. Road",
                  "109|Jaipur – MI Road",
                  "110|Surat – Adajan"
                ].forEach(b=>{ %>
                  <option value="<%= b %>" ><%= b.split("|")[1] %></option>
                <% }); %>
            </select>
          </label>

          <!-- CREATE BUTTON -->
          <button
            class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white py-3 rounded-lg font-semibold text-sm hover:from-blue-700 hover:to-indigo-700 transition shadow-md hover:shadow-lg mt-8">
            Create Account
          </button>

        </form>

      </section>

    </main>

  </div>

</body>
</html>
