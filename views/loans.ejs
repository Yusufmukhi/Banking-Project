<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Loans</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .sidebar-open body {
      overflow: hidden;
    }
  </style>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-4 sm:px-8 py-4 sm:py-5 flex justify-between items-center border-b border-slate-200 sticky top-0 z-40">
    <!-- Added hamburger button for mobile -->
    <button id="hamburger-btn" class="lg:hidden p-2 rounded-lg hover:bg-blue-50 transition-colors">
      <div class="w-6 h-5 flex flex-col justify-between">
        <span class="h-0.5 w-full bg-blue-600 rounded transition-all duration-300" id="line1"></span>
        <span class="h-0.5 w-full bg-blue-600 rounded transition-all duration-300" id="line2"></span>
        <span class="h-0.5 w-full bg-blue-600 rounded transition-all duration-300" id="line3"></span>
      </div>
    </button>

    <div class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">BankTrust</div>

    <div class="text-right">
      <p class="font-semibold text-gray-900 text-sm sm:text-base">Welcome, <%=Customers.username %></p>
      <p class="text-xs text-gray-500 mt-1">Customer ID: <%= Customers.cif %></p>
    </div>
  </header>

  <!-- Added mobile sidebar overlay with backdrop -->
  <div id="mobile-backdrop" class="fixed inset-0 bg-black bg-opacity-50 hidden lg:hidden z-30" onclick="closeMobileMenu()"></div>

  <div class="flex min-h-screen bg-slate-50">

    <!-- LEFT SIDEBAR -->
    <aside id="sidebar" class="fixed lg:static w-64 bg-white shadow-lg min-h-screen p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 z-40">
      <!-- Added close button for mobile -->
      <button onclick="closeMobileMenu()" class="lg:hidden absolute top-4 right-4 p-2 hover:bg-gray-100 rounded-lg">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="font-bold text-gray-900 mb-6 text-lg uppercase tracking-wider text-sm">Navigation</h2>

      <ul class="space-y-2 text-gray-700">
        <li><a href="/" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m-4-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
          <span class="text-sm font-medium">Dashboard</span></a></li>

        <li><a href="/accounts/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
          <span class="text-sm font-medium">Accounts</span></a></li>

        <li><a href="/upi/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          <span class="text-sm font-medium">UPI</span></a></li>

        <li><a href="/deposits/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <span class="text-sm font-medium">Deposits</span></a></li>

        <li><a href="/loans/<%=id%>" class="flex items-center gap-3 px-4 py-3 bg-blue-50 text-blue-700 rounded-lg font-semibold border-l-4 border-blue-600" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <span class="text-sm font-medium">Loans</span></a></li>

        <li><a href="/transfers/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
          <span class="text-sm font-medium">Transfers</span></a></li>

        <li><a href="/statements/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
          <span class="text-sm font-medium">Statements</span></a></li>

        <li><a href="/profile/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
          <span class="text-sm font-medium">Profile</span></a></li>

        <li><a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-all" onclick="closeMobileMenu()">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
          <span class="text-sm font-medium">Logout</span></a></li>
      </ul>

      <hr class="my-6 border-slate-200">
      <ul class="text-sm space-y-2">
        <li><a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium" onclick="closeMobileMenu()">
          <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
          Block Debit Card</a></li>
        <li><a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium" onclick="closeMobileMenu()">
          <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          Report Fraud</a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 sm:p-8 space-y-8 overflow-y-auto w-full">

      <!-- HEADER -->
      <div>
        <h1 class="text-2xl sm:text-4xl font-bold text-gray-900">Loans</h1>
        <p class="text-gray-600 mt-2 text-sm sm:text-base">Manage your loans and EMI payments</p>
      </div>

      <!-- LOAN OVERVIEW CARDS -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        <!-- Active Loans -->
        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs sm:text-sm text-gray-500 uppercase tracking-wider font-semibold">Active Loans</p>
          <p class="text-3xl sm:text-4xl font-bold text-red-600 mt-3"><%= Loans.length %></p>
          <p class="text-xs text-gray-500 mt-2">Active loan accounts</p>
        </div>

        <!-- Total Outstanding -->
        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs sm:text-sm text-gray-500 uppercase tracking-wider font-semibold">Total Outstanding</p>
          <p class="text-3xl sm:text-4xl font-bold text-orange-600 mt-3">₹<%= TotalOutstanding %></p>
          <p class="text-xs text-gray-500 mt-2">Principal amount</p>
        </div>

        <!-- Next EMI Due -->
        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs sm:text-sm text-gray-500 uppercase tracking-wider font-semibold">Next EMI Due</p>
          <p class="text-3xl sm:text-4xl font-bold text-blue-600 mt-3">₹<%= NextEMI %></p>
          <p class="text-xs text-gray-500 mt-2">EMI amount with penalties</p>
        </div>
      </div>

      <!-- ACTIVE LOANS SECTION -->
      <section class="bg-white p-4 sm:p-8 rounded-xl shadow-md border border-slate-200">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900">Active Loans</h2>
          <a href="/apply-loan/<%=id%>" class="w-full sm:w-auto px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-lg font-semibold hover:shadow-lg transition-all flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            <span class="text-sm sm:text-base">Apply for Loan</span>
          </a>
        </div>

        <!-- Display loans from database -->
        <% if (Loans.length === 0) { %>
          <p class="text-gray-600 py-8 text-center">No active loans</p>
        <% } else { %>
          <% Loans.forEach((loan, index) => { %>
            <div class="mb-6 pb-6 border-b border-slate-200 last:border-b-0">
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 sm:gap-6 mb-4">
                <div>
                  <p class="text-xs sm:text-sm text-gray-600 mb-1">Loan Type</p>
                  <p class="font-semibold text-gray-900 text-sm sm:text-base"><%= loan.loan_type %></p>
                </div>
                <div>
                  <p class="text-xs sm:text-sm text-gray-600 mb-1">Loan Amount</p>
                  <p class="font-semibold text-gray-900 text-sm sm:text-base">₹<%= parseFloat(loan.loan_amount).toLocaleString('en-IN') %></p>
                </div>
                <div>
                  <p class="text-xs sm:text-sm text-gray-600 mb-1">Paid EMIs / Total</p>
                  <p class="font-bold text-green-600 text-sm sm:text-base"><%= loan.paid_emis %>/<%= loan.tenure_months %></p>
                </div>
                <div>
                  <p class="text-xs sm:text-sm text-gray-600 mb-1">Interest Rate</p>
                  <p class="font-semibold text-gray-900 text-sm sm:text-base"><%= parseFloat(loan.interest_rate).toFixed(2) %>% p.a.</p>
                </div>
                <div class="flex flex-col sm:flex-row gap-2 items-stretch">
                  <a href="/pay-emi/<%=id%>/<%= loan.loan_id %>" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold text-xs sm:text-sm text-center">Pay EMI</a>
                  <a href="/loan-details/<%=id%>/<%= loan.loan_id %>" class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors font-semibold text-xs sm:text-sm text-center">View</a>
                </div>
              </div>
              <div class="grid grid-cols-2 lg:grid-cols-5 gap-3 sm:gap-4">
                <div class="bg-slate-50 p-3 rounded-lg">
                  <p class="text-xs text-gray-600">Current EMI</p>
                  <p class="font-bold text-gray-900 text-sm">₹<%= parseFloat(loan.emi_amount).toLocaleString('en-IN') %>/mo</p>
                </div>
                <div class="bg-slate-50 p-3 rounded-lg">
                  <p class="text-xs text-gray-600">Remaining EMIs</p>
                  <p class="font-bold text-gray-900 text-sm"><%= loan.remaining_emis %></p>
                </div>
                <div class="bg-slate-50 p-3 rounded-lg">
                  <p class="text-xs text-gray-600">Next EMI Date</p>
                  <p class="font-bold text-gray-900 text-sm"><%= new Date(loan.next_emi_date).toLocaleDateString('en-IN') %></p>
                </div>
                <div class="bg-slate-50 p-3 rounded-lg">
                  <p class="text-xs text-gray-600">Penalties Due</p>
                  <p class="font-bold text-red-600 text-sm">₹<%= (loan.total_pending_penalty + loan.total_overdue_penalty).toLocaleString('en-IN') %></p>
                </div>
                <div class="bg-slate-50 p-3 rounded-lg">
                  <p class="text-xs text-gray-600">Loan End Date</p>
                  <p class="font-bold text-gray-900 text-sm"><%= new Date(loan.end_date).toLocaleDateString('en-IN') %></p>
                </div>
              </div>
            </div>
          <% }); %>
        <% } %>
      </section>

      <!-- UPCOMING EMI SCHEDULE -->
      <section class="bg-white p-4 sm:p-8 rounded-xl shadow-md border border-slate-200">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">Upcoming EMI Payments</h2>

        <div class="overflow-x-auto">
          <table class="w-full text-left text-xs sm:text-sm">
            <thead>
              <tr class="border-b-2 border-slate-200 bg-slate-50">
                <th class="py-3 px-2 sm:px-4 font-semibold text-gray-700">Loan Type</th>
                <th class="py-3 px-2 sm:px-4 font-semibold text-gray-700">Due Date</th>
                <th class="py-3 px-2 sm:px-4 font-semibold text-gray-700">EMI Amount</th>
                <th class="py-3 px-2 sm:px-4 font-semibold text-gray-700">Principal</th>
                <th class="py-3 px-2 sm:px-4 font-semibold text-gray-700">Interest</th>
                <th class="py-3 px-2 sm:px-4 font-semibold text-gray-700">Status</th>
              </tr>
            </thead>
            <tbody class="text-gray-700">
              <% Loans.slice(0, 3).forEach((loan) => { %>
                <tr class="border-b border-slate-100 hover:bg-slate-50 transition-colors">
                  <td class="py-4 px-2 sm:px-4"><%= loan.loan_type %></td>
                  <td class="py-4 px-2 sm:px-4 font-semibold"><%= new Date(loan.next_emi_date).toLocaleDateString('en-IN') %></td>
                  <td class="py-4 px-2 sm:px-4 font-bold text-red-600">₹<%= parseFloat(loan.emi_amount).toLocaleString('en-IN') %></td>
                  <td class="py-4 px-2 sm:px-4">₹<%= (parseFloat(loan.emi_amount) * 0.7).toLocaleString('en-IN') %></td>
                  <td class="py-4 px-2 sm:px-4">₹<%= (parseFloat(loan.emi_amount) * 0.3).toLocaleString('en-IN') %></td>
                  <td class="py-4 px-2 sm:px-4"><span class="px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-semibold">Pending</span></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </section>

    </main>

  </div>

  <script>
    const hamburgerBtn = document.getElementById('hamburger-btn');
    const sidebar = document.getElementById('sidebar');
    const backdrop = document.getElementById('mobile-backdrop');
    const line1 = document.getElementById('line1');
    const line2 = document.getElementById('line2');
    const line3 = document.getElementById('line3');
    let isOpen = false;

    function toggleMobileMenu() {
      isOpen = !isOpen;
      if (isOpen) {
        sidebar.classList.remove('-translate-x-full');
        backdrop.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        line1.style.transform = 'rotate(45deg) translateY(10px)';
        line2.style.opacity = '0';
        line3.style.transform = 'rotate(-45deg) translateY(-10px)';
      } else {
        closeMobileMenu();
      }
    }

    function closeMobileMenu() {
      isOpen = false;
      sidebar.classList.add('-translate-x-full');
      backdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
      line1.style.transform = 'none';
      line2.style.opacity = '1';
      line3.style.transform = 'none';
    }

    hamburgerBtn.addEventListener('click', toggleMobileMenu);
    backdrop.addEventListener('click', closeMobileMenu);
  </script>

</body>
</html>
