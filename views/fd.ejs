<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BankTrust | Open Fixed Deposit</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAVBAR -->
  <header class="bg-white shadow-md px-4 sm:px-8 py-3 sm:py-5 flex justify-between items-center sticky top-0 z-40 border-b border-slate-200">
    <!-- Added responsive hamburger button with blue styling -->
    <button id="mobileMenuBtn" class="lg:hidden flex flex-col gap-1 p-2 rounded-lg transition-all duration-300 group hover:bg-blue-50 active:bg-blue-100">
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:rotate-45 group-active:translate-y-1.5"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 group-active:opacity-0"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:-rotate-45 group-active:-translate-y-1.5"></span>
    </button>

    <div class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent flex-1 text-center lg:flex-none lg:text-left lg:ml-0">BankTrust</div>

    <!-- Made welcome text responsive with responsive padding -->
    <div class="hidden sm:block text-right text-sm sm:text-base">
      <p class="font-semibold text-gray-900">Welcome, Rohan Mehta</p>
      <p class="text-xs text-gray-500">Customer ID: 87654321</p>
    </div>
  </header>

  <div class="flex min-h-screen relative">

    <!-- Updated sidebar with responsive styling and animation -->
    <aside id="sidebar" class="fixed lg:static top-0 left-0 w-64 bg-white shadow-2xl min-h-screen p-4 sm:p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-all duration-300 ease-in-out z-30 overflow-y-auto">
      <!-- Close button for mobile -->
      <button id="closeSidebarBtn" class="lg:hidden absolute top-4 right-4 p-1 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="font-bold text-gray-900 mb-6 text-sm sm:text-lg uppercase tracking-wider">Navigation</h2>

      <ul class="space-y-1 text-sm">
        <li><a href="/dashboard" class="block px-3 py-2 hover:bg-blue-500 hover:text-white rounded transition-colors">Dashboard</a></li>
        <li><a href="/accounts" class="block px-3 py-2 hover:bg-blue-500 hover:text-white rounded transition-colors">Accounts</a></li>
        <li><a href="/upi" class="block px-3 py-2 hover:bg-blue-500 hover:text-white rounded transition-colors">UPI</a></li>
        <li><a class="block px-3 py-2 bg-blue-500 text-white rounded font-semibold">Deposits</a></li>
        <li><a href="/loans" class="block px-3 py-2 hover:bg-blue-500 hover:text-white rounded transition-colors">Loans</a></li>
      </ul>
    </aside>

    <!-- Mobile overlay backdrop -->
    <div id="sidebarBackdrop" class="fixed inset-0 bg-black bg-opacity-50 hidden lg:hidden z-20"></div>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 sm:p-8 space-y-6 sm:space-y-8 overflow-y-auto w-full">

      <div>
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900">Open Fixed Deposit (FD)</h1>
        <p class="text-sm sm:text-base text-gray-600 mt-2">Start a new Fixed Deposit with secure returns.</p>
      </div>

      <!-- FD Form -->
      <div class="bg-white p-4 sm:p-6 lg:p-8 rounded-xl shadow border max-w-full lg:max-w-3xl">

        <!-- Amount -->
        <label class="block">
          <span class="text-sm font-semibold text-gray-700">Deposit Amount (₹)</span>
          <input
            class="w-full mt-2 border-2 border-gray-300 rounded-xl p-3 text-sm sm:text-base focus:border-indigo-600 focus:ring-indigo-300 focus:ring-2 transition"
            placeholder="Enter amount (minimum ₹5,000)">
        </label>

        <!-- Tenure -->
        <label class="block mt-4 sm:mt-6">
          <span class="text-sm font-semibold text-gray-700">Tenure</span>
          <select
            class="w-full mt-2 border-2 border-gray-300 rounded-xl p-3 text-sm sm:text-base focus:border-indigo-600 focus:ring-indigo-300 focus:ring-2 transition">
            <option>Choose tenure</option>
            <option>6 Months</option>
            <option>1 Year</option>
            <option>2 Years</option>
            <option>3 Years</option>
            <option>5 Years</option>
          </select>
        </label>

        <!-- Interest Payout -->
        <label class="block mt-4 sm:mt-6">
          <span class="text-sm font-semibold text-gray-700">Interest Payout</span>
          <select
            class="w-full mt-2 border-2 border-gray-300 rounded-xl p-3 text-sm sm:text-base focus:border-indigo-600 focus:ring-indigo-300 focus:ring-2 transition">
            <option>Monthly</option>
            <option>Quarterly</option>
            <option>Half-Yearly</option>
            <option>Yearly</option>
            <option>On Maturity</option>
          </select>
        </label>

        <!-- Nominee -->
        <label class="block mt-4 sm:mt-6">
          <span class="text-sm font-semibold text-gray-700">Nominee Name</span>
          <input
            class="w-full mt-2 border-2 border-gray-300 rounded-xl p-3 text-sm sm:text-base focus:border-indigo-600 focus:ring-indigo-300 focus:ring-2 transition"
            placeholder="Enter nominee full name">
        </label>

        <label class="block mt-4 sm:mt-6">
          <span class="text-sm font-semibold text-gray-700">Relationship with Nominee</span>
          <input
            class="w-full mt-2 border-2 border-gray-300 rounded-xl p-3 text-sm sm:text-base focus:border-indigo-600 focus:ring-indigo-300 focus:ring-2 transition"
            placeholder="E.g., Father, Mother, Spouse, Son, Daughter">
        </label>

        <!-- Button -->
        <button
          class="w-full mt-6 sm:mt-8 bg-blue-700 hover:bg-blue-800 text-white py-3 rounded-xl font-semibold text-sm sm:text-lg transition-colors">
          Create Fixed Deposit
        </button>

      </div>

    </main>
  </div>

  <script>
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const closeSidebarBtn = document.getElementById('closeSidebarBtn');
    const sidebar = document.getElementById('sidebar');
    const sidebarBackdrop = document.getElementById('sidebarBackdrop');

    mobileMenuBtn.addEventListener('click', () => {
      sidebar.classList.remove('-translate-x-full');
      sidebarBackdrop.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });

    closeSidebarBtn.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    sidebarBackdrop.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    document.querySelectorAll('#sidebar a').forEach(link => {
      link.addEventListener('click', () => {
        sidebar.classList.add('-translate-x-full');
        sidebarBackdrop.classList.add('hidden');
        document.body.style.overflow = 'auto';
      });
    });
  </script>

</body>

</html>
