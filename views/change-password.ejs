<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Change Password</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 text-gray-800">
  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-4 sm:px-8 py-5 flex justify-between items-center border-b border-slate-200 sticky top-0 z-40">
    <div class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">BankTrust</div>
    
    <!-- Added hamburger menu button for mobile -->
    <button id="menu-toggle" class="lg:hidden flex flex-col gap-1.5 cursor-pointer p-2 hover:bg-gray-100 rounded-lg transition-all">
      <span class="w-6 h-0.5 bg-blue-600 transition-all duration-300"></span>
      <span class="w-6 h-0.5 bg-blue-600 transition-all duration-300"></span>
      <span class="w-6 h-0.5 bg-blue-600 transition-all duration-300"></span>
    </button>

    <div class="hidden sm:block text-right">
      <p class="font-semibold text-gray-900 text-sm sm:text-base">Welcome, <%= user.username %></p>
      <p class="text-xs text-gray-500 mt-1">Customer ID: <%= user.cif %></p>
    </div>
  </header>

  <div class="flex min-h-screen bg-slate-50">
    <!-- LEFT SIDEBAR -->
    <aside id="sidebar" class="fixed lg:relative left-0 top-0 w-64 bg-white shadow-lg min-h-screen p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 z-50 overflow-y-auto">
      <!-- Added close button for mobile -->
      <button id="close-sidebar" class="lg:hidden absolute top-4 right-4 text-gray-500 hover:text-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="font-bold text-gray-900 mb-6 text-lg uppercase tracking-wider text-sm mt-8 lg:mt-0">Navigation</h2>
      <ul class="space-y-2 text-gray-700">
        <li>
          <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9"></path>
            </svg>
            <span class="text-sm font-medium">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/profile/<%= user.id %>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-sm font-medium">Profile</span>
          </a>
        </li>
        <li>
          <a href="/change-password/<%= user.id %>" class="flex items-center gap-3 px-4 py-3 bg-blue-50 text-blue-700 rounded-lg font-semibold border-l-4 border-blue-600">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <span class="text-sm font-medium">Change Password</span>
          </a>
        </li>
        <li>
          <a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span class="text-sm font-medium">Logout</span>
          </a>
        </li>
      </ul>
    </aside>

    <!-- Added mobile overlay backdrop -->
    <div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 lg:hidden hidden z-40" onclick="closeSidebar()"></div>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 sm:p-8 w-full overflow-y-auto">
      <div class="mb-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Change Password</h1>
        <p class="text-gray-600 mt-2 text-sm sm:text-base">Update your account password to keep your account secure</p>
      </div>

      <% if(success){ %>
        <div class="bg-green-50 border border-green-200 text-green-700 p-4 rounded-lg mb-6">
          <p class="font-semibold">Password changed successfully!</p>
          <p class="text-sm mt-1">Your password has been updated.</p>
        </div>
      <% } %>

      <!-- EMAIL VERIFICATION SECTION -->
      <div class="bg-blue-50 border border-blue-200 p-4 sm:p-6 rounded-lg mb-8">
        <h3 class="text-lg font-semibold text-blue-900 mb-4">Step 1: Verify Your Email</h3>
        <p class="text-blue-800 mb-4 text-sm sm:text-base">For security, please verify your email address before changing your password.</p>
        
        <div class="mb-4">
          <label class="block text-sm font-semibold text-gray-700 mb-2">Your Email</label>
          <input 
            type="email" 
            value="<%= user.email %>" 
            class="w-full border border-gray-300 rounded-lg px-4 py-3 bg-gray-100 text-gray-700 text-sm"
            readonly>
        </div>

        <div class="bg-white p-4 rounded-lg border border-blue-200">
          <div 
            id="email-verify-widget"
            class="pe_verify_email"
            data-client-id="<%= phoneEmailClientId %>"
            data-redirect-uri="http://localhost:3000/verify-email-otp"
            data-scope="email"
            data-state="change-password">
          </div>
        </div>

        <div id="email-status" class="mt-4"></div>
      </div>

      <!-- PASSWORD CHANGE SECTION - Only show after email verification -->
      <% if (emailOtpVerified) { %>
        <div id="password-section">
      <% } else { %>
        <div id="password-section" style="display:none">
      <% } %>

        <h3 class="text-lg font-semibold text-gray-900 mb-4">Step 2: Change Your Password</h3>

        <div class="max-w-2xl bg-white p-6 sm:p-8 rounded-xl shadow-md border border-slate-200">

          <% if(errors && errors.system){ %>
            <div class="bg-red-50 border border-red-200 text-red-700 p-4 rounded-lg mb-6">
              <%= errors.system %>
            </div>
          <% } %>

          <form method="POST" action="/change-password/<%= user.id %>" class="space-y-6">

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Current Password</label>
              <input 
                type="password" 
                name="currentPassword" 
                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"
                placeholder="Enter your current password"
                required>
              <% if(errors && errors.currentPassword){ %>
                <p class="text-red-500 text-sm mt-1"><%= errors.currentPassword %></p>
              <% } %>
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">New Password</label>
              <input 
                type="password" 
                name="newPassword" 
                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"
                placeholder="Create a strong password"
                required>
              <% if(errors && errors.newPassword){ %>
                <p class="text-red-500 text-sm mt-1"><%= errors.newPassword %></p>
              <% } %>
              <div class="bg-blue-50 p-4 rounded-lg mt-3 text-sm text-gray-700">
                <p class="font-semibold mb-2">Password must contain:</p>
                <ul class="space-y-1 text-xs">
                  <li>At least 8 characters</li>
                  <li>One uppercase letter (A-Z)</li>
                  <li>One lowercase letter (a-z)</li>
                  <li>One number (0-9)</li>
                </ul>
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Confirm New Password</label>
              <input 
                type="password" 
                name="confirmPassword" 
                class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"
                placeholder="Re-enter your new password"
                required>
              <% if(errors && errors.confirmPassword){ %>
                <p class="text-red-500 text-sm mt-1"><%= errors.confirmPassword %></p>
              <% } %>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
              <button type="submit" class="bg-blue-600 text-white font-semibold px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors text-sm sm:text-base">
                Update Password
              </button>
              <a href="/profile/<%= user.id %>" class="bg-gray-200 text-gray-900 font-semibold px-8 py-3 rounded-lg hover:bg-gray-300 transition-colors text-center text-sm sm:text-base">
                Cancel
              </a>
            </div>

          </form>
        </div>
      </div>

    </main>
  </div>


  <script>
    document.getElementById('menu-toggle').addEventListener('click', () => {
      document.getElementById('sidebar').classList.toggle('-translate-x-full');
      document.getElementById('sidebar-overlay').classList.toggle('hidden');
      document.body.style.overflow = document.body.style.overflow === 'hidden' ? 'auto' : 'hidden';
    });

    document.getElementById('close-sidebar').addEventListener('click', closeSidebar);
    document.getElementById('sidebar-overlay').addEventListener('click', closeSidebar);

    function closeSidebar() {
      document.getElementById('sidebar').classList.add('-translate-x-full');
      document.getElementById('sidebar-overlay').classList.add('hidden');
      document.body.style.overflow = 'auto';
    }

    // Close sidebar when clicking on a link
    document.querySelectorAll('#sidebar a').forEach(link => {
      link.addEventListener('click', closeSidebar);
    });

    function phoneEmailReceiver(data) {
      console.log("[v0] Phone.email callback received:", data);
      
      if (data && data.user_json_url) {
        fetch(data.user_json_url)
        .then(res => res.json())
        .then(userData => {
          console.log("[v0] Email userData:", userData);
          
          if (userData.user_email_id) {
            fetch('/verify-email-otp', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ email: userData.user_email_id })
            })
            .then(res => res.json())
            .then(result => {
              if (result.success) {
                document.getElementById("email-status").innerHTML =
                  '<p class="text-green-600 font-semibold">âœ” Email verified successfully</p>'
                document.getElementById("password-section").style.display = "block"
              }
            })
            .catch(err => console.error("[v0] Verification error:", err));
          }
        })
        .catch(err => console.error("[v0] Error fetching user data:", err));
      }
    }
  </script>

  <script src="https://www.phone.email/verify_email_v1.js" defer></script>

</body>
</html>
