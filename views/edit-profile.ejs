
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Edit Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-8 py-5 flex justify-between items-center border-b border-slate-200">
    <div class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">BankTrust</div>
    <div class="text-right">
      <p class="font-semibold text-gray-900">Welcome, <%= user.username %></p>
      <p class="text-xs text-gray-500 mt-1">Customer ID: <%= user.cif %></p>
    </div>
  </header>

  <div class="flex min-h-screen bg-slate-50">

    <!-- LEFT SIDEBAR -->
    <aside class="w-64 bg-white shadow-lg min-h-screen p-6 border-r border-slate-200">
      <h2 class="font-bold text-gray-900 mb-6 text-lg uppercase tracking-wider text-sm">Navigation</h2>

      <ul class="space-y-2 text-gray-700">
        <li>
          <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9"></path>
            </svg>
            <span class="text-sm font-medium">Dashboard</span>
          </a>
        </li>

        <li>
          <a href="/profile/<%= user.id %>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-sm font-medium">Profile</span>
          </a>
        </li>

        <li>
          <a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span class="text-sm font-medium">Logout</span>
          </a>
        </li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-8 space-y-8 overflow-y-auto">

      <!-- EDIT PROFILE FORM -->
      <section class="bg-white p-8 rounded-xl shadow-md border border-slate-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Edit Profile</h2>

        <form method="POST" action="/edit-profile/<%=user.customer_id%>" class="space-y-6">

          <!-- Full Name -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Full Name</label>
            <input 
              type="text" 
              name="full_name" 
              value="<%= customer.full_name %>"
              class="w-full border border-slate-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required>
            <% if (errors && errors.full_name) { %>
              <p class="text-red-500 text-sm mt-1"><%= errors.full_name %></p>
            <% } %>
          </div>

          <!-- Email -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
            <input 
              type="email" 
              name="email" 
              value="<%= customer.email %>"
              class="w-full border border-slate-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required>
            <% if (errors && errors.email) { %>
              <p class="text-red-500 text-sm mt-1"><%= errors.email %></p>
            <% } %>
          </div>

          <!-- Phone -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Phone Number</label>
            <input 
              type="tel" 
              name="phone" 
              value="<%= customer.phone %>"
              class="w-full border border-slate-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required>
            <% if (errors && errors.phone) { %>
              <p class="text-red-500 text-sm mt-1"><%= errors.phone %></p>
            <% } %>
          </div>

          <!-- Address -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Residential Address</label>
            <input 
              type="text" 
              name="address" 
              value="<%= customer.address %>"
              class="w-full border border-slate-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required>
            <% if (errors && errors.address) { %>
              <p class="text-red-500 text-sm mt-1"><%= errors.address %></p>
            <% } %>
          </div>

          <!-- City, State, Postal Code -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">City</label>
              <input 
                type="text" 
                name="city" 
                value="<%= customer.city %>"
                class="w-full border border-slate-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500"
                required>
              <% if (errors && errors.city) { %>
                <p class="text-red-500 text-sm mt-1"><%= errors.city %></p>
              <% } %>
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">State</label>
              <input 
                type="text" 
                name="state" 
                value="<%= customer.state %>"
                class="w-full border border-slate-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500"
                required>
              <% if (errors && errors.state) { %>
                <p class="text-red-500 text-sm mt-1"><%= errors.state %></p>
              <% } %>
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Postal Code</label>
              <input 
                type="text" 
                name="postal_code" 
                value="<%= customer.postal_code %>"
                class="w-full border border-slate-300 rounded-lg px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500"
                required>
              <% if (errors && errors.postal_code) { %>
                <p class="text-red-500 text-sm mt-1"><%= errors.postal_code %></p>
              <% } %>
            </div>
          </div>

          <!-- Buttons -->
          <div class="flex gap-4 mt-8">
            <button 
              type="submit" 
              class="bg-blue-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
              Save Changes
            </button>
            <a 
              href="/profile/<%= user.id %>" 
              class="bg-slate-500 text-white px-6 py-2 rounded-lg font-semibold hover:bg-slate-600 transition-colors">
              Cancel
            </a>
          </div>

          <% if (success) { %>
            <div class="bg-green-50 border border-green-300 text-green-700 px-4 py-3 rounded-lg mt-4">
              Profile updated successfully!
            </div>
          <% } %>
          <% if (errors && errors.system) { %>
            <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-3 rounded-lg mt-4">
              <%= errors.system %>
            </div>
          <% } %>

        </form>
      </section>

    </main>

  </div>

</body>
</html>
