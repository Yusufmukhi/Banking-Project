<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Apply for Loan</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-4 sm:px-8 py-3 sm:py-5 flex justify-between items-center sticky top-0 z-40 border-b border-slate-200">
    <!-- Added hamburger button with blue color matching accounts.html -->
    <button id="mobileMenuBtn" class="lg:hidden flex flex-col gap-1 p-2 rounded-lg transition-all duration-300 group hover:bg-blue-50 active:bg-blue-100">
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:rotate-45 group-active:translate-y-1.5"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 group-active:opacity-0"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:-rotate-45 group-active:-translate-y-1.5"></span>
    </button>

    <div class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent flex-1 text-center lg:flex-none lg:text-left lg:ml-0">BankTrust</div>

    <div class="hidden sm:block text-right order-3">
      <p class="font-semibold text-gray-900 text-sm sm:text-base">Welcome, <%=Customers.username %></p>
      <p class="text-xs text-gray-500">Customer ID: <%= Customers.cif %></p>
    </div>
  </header>

  <div class="flex min-h-screen relative">

    <!-- Sidebar now collapsible on mobile with animation, matching accounts.html -->
    <aside id="sidebar" class="fixed lg:static top-0 left-0 w-64 bg-white shadow-2xl min-h-screen p-4 sm:p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-all duration-300 ease-in-out z-30 overflow-y-auto">
      <!-- Close button -->
      <button id="closeSidebarBtn" class="lg:hidden absolute top-4 right-4 p-1 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="font-bold text-gray-900 mb-6 text-sm sm:text-lg uppercase tracking-wider">Navigation</h2>

      <nav class="mb-8">
          <ul class="space-y-1">
              <li><a href="/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200 text-sm">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m-4-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
                  Dashboard
              </a></li>
              <li><a href="/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200 text-sm">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
                  Accounts
              </a></li>
              <li><a href="/upi/<%=id%>" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200 text-sm">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                  UPI
              </a></li>
              <li><a href="/deposits/<%=id%>" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200 text-sm">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  Deposits
              </a></li>
              <li><a href="/loans/<%=id%>" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-blue-500 font-semibold text-sm transition-colors duration-200">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                  Loans
              </a></li>
              <li><a href="/transfers/<%=id%>" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200 text-sm">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 11-8 0 4 4 0 018 0zM15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
                  Transfers
              </a></li>
              <li><a href="/statements/<%=id%>" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200 text-sm">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
                  Statements
              </a></li>
              <li><a href="/profile/<%=id%>" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-blue-500 transition-colors duration-200 text-sm">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                  Profile
              </a></li>
              <li><a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-red-500 transition-colors duration-200 text-sm text-gray-900">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                  Logout
              </a></li>
          </ul>
      </nav>

      <hr class="my-6 border-slate-200">

      <div class="pt-6 border-t border-blue-400 border-opacity-30 space-y-2">
          <a href="#" class="flex items-center gap-2 text-gray-700 hover:text-blue-600 text-sm font-medium transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path></svg>
              Block Debit Card
          </a>
          <a href="#" class="flex items-center gap-2 text-gray-700 hover:text-blue-600 text-sm font-medium transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 0v2m0-2h2m-2 0h-2m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              Report Fraud
          </a>
      </div>
    </aside>

    <!-- Mobile overlay backdrop -->
    <div id="sidebarBackdrop" class="fixed inset-0 bg-black bg-opacity-50 hidden lg:hidden z-20"></div>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 sm:p-8 space-y-6 sm:space-y-8 overflow-y-auto w-full">

      <div>
        <h1 class="text-2xl sm:text-4xl font-bold text-gray-900">Apply for Loan</h1>
        <p class="text-sm sm:text-base text-gray-600 mt-2">Choose loan type and get instant approval</p>
      </div>

      <!-- LOAN TYPES -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-all cursor-pointer" onclick="selectLoan('personal')">
          <svg class="w-10 sm:w-12 h-10 sm:h-12 text-blue-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          <h3 class="text-lg sm:text-xl font-bold text-gray-900">Personal Loan</h3>
          <p class="text-gray-600 text-xs sm:text-sm mt-2">Up to ₹50 Lakhs</p>
          <p class="text-xs sm:text-sm text-blue-600 font-semibold mt-3">Rate: 9.5% - 12% p.a.</p>
        </div>

        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-all cursor-pointer" onclick="selectLoan('home')">
          <svg class="w-10 sm:w-12 h-10 sm:h-12 text-green-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m-4-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
          <h3 class="text-lg sm:text-xl font-bold text-gray-900">Home Loan</h3>
          <p class="text-gray-600 text-xs sm:text-sm mt-2">Up to ₹1 Crore</p>
          <p class="text-xs sm:text-sm text-green-600 font-semibold mt-3">Rate: 6.5% - 8% p.a.</p>
        </div>

        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-all cursor-pointer" onclick="selectLoan('vehicle')">
          <svg class="w-10 sm:w-12 h-10 sm:h-12 text-red-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <h3 class="text-lg sm:text-xl font-bold text-gray-900">Vehicle Loan</h3>
          <p class="text-gray-600 text-xs sm:text-sm mt-2">Up to ₹30 Lakhs</p>
          <p class="text-xs sm:text-sm text-red-600 font-semibold mt-3">Rate: 8% - 10% p.a.</p>
        </div>
      </div>

      <!-- LOAN APPLICATION FORM -->
      <form method="POST" action="/loans/apply/submit/<%=id%>" class="bg-white p-4 sm:p-8 rounded-xl shadow-md border border-slate-200">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">Loan Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 mb-6">
          <div>
            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">Loan Type</label>
            <select id="loanTypeSelect" name="loan_type" onchange="updateInterestRate()" class="w-full px-3 sm:px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" required>
              <option value="">Select Loan Type</option>
              <option value="Personal">Personal Loan</option>
              <option value="Home">Home Loan</option>
              <option value="Vehicle">Vehicle Loan</option>
            </select>
          </div>

          <div>
            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">Loan Amount</label>
            <input type="number" id="loanAmountInput" name="loan_amount" placeholder="Enter amount in ₹" min="100000" step="100000" oninput="updateEMI()" class="w-full px-3 sm:px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" required>
          </div>

          <div>
            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">Tenure (Months)</label>
            <input type="range" id="tenureInput" name="tenure_months" min="12" max="60" value="24" oninput="updateEMI()" class="w-full">
            <p class="text-xs sm:text-sm text-gray-600 mt-1"><span id="tenureDisplay">24</span> months</p>
          </div>

          <div>
            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">Interest Rate (%)</label>
            <input type="number" id="interestRateInput" name="interest_rate" placeholder="p.a." step="0.1" class="w-full px-3 sm:px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" readonly>
          </div>
        </div>

        <!-- EMI CALCULATOR -->
        <div class="bg-blue-50 p-4 sm:p-6 rounded-lg border border-blue-200 mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Estimated EMI</h3>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6">
            <div>
              <p class="text-xs sm:text-sm text-gray-600">Monthly EMI</p>
              <p class="text-2xl sm:text-3xl font-bold text-blue-600">₹<span id="emiAmount">0</span></p>
            </div>
            <div>
              <p class="text-xs sm:text-sm text-gray-600">Total Interest</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900">₹<span id="totalInterest">0</span></p>
            </div>
            <div>
              <p class="text-xs sm:text-sm text-gray-600">Total Amount</p>
              <p class="text-xl sm:text-2xl font-bold text-gray-900">₹<span id="totalAmount">0</span></p>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 mb-6">
          <div>
            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">Linked Account</label>
            <select name="linked_account" class="w-full px-3 sm:px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" required>
              <option value="">Select Account</option>
              <% Accounts.forEach(acc => { %>
                <option value="<%= acc.account_id %>"><%= acc.account_type %> - <%= acc.account_number.slice(-4) %></option>
              <% }); %>
            </select>
          </div>

          <div>
            <label class="block text-xs sm:text-sm font-semibold text-gray-700 mb-2">Purpose</label>
            <input type="text" name="purpose" placeholder="e.g., Car purchase" class="w-full px-3 sm:px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" required>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <button type="submit" class="flex-1 bg-blue-600 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-sm sm:text-base">Apply for Loan</button>
          <a href="/loans/<%=id%>" class="flex-1 bg-slate-300 text-gray-900 px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold hover:bg-slate-400 transition-colors text-center text-sm sm:text-base">Cancel</a>
        </div>
      </form>

    </main>
  </div>

  <script>
    const interestRates = {
      'Personal': { 
        '12-24': 12,
        '25-36': 10.75,
        '37-60': 9.5
      },
      'Home': { 
        '12-24': 8,
        '25-36': 7.25,
        '37-60': 6.5
      },
      'Vehicle': { 
        '12-24': 10,
        '25-36': 9.25,
        '37-60': 8
      }
    };

    function getInterestRateByTenure(loanType, tenure) {
      if (tenure <= 24) return interestRates[loanType]['12-24'];
      if (tenure <= 36) return interestRates[loanType]['25-36'];
      return interestRates[loanType]['37-60'];
    }

    function updateInterestRate() {
      const loanType = document.getElementById('loanTypeSelect').value;
      const tenure = Number.parseInt(document.getElementById('tenureInput').value);
      
      if (loanType && interestRates[loanType]) {
        const rate = getInterestRateByTenure(loanType, tenure);
        document.getElementById('interestRateInput').value = rate.toFixed(2);
        updateEMI();
      }
    }

    function updateEMI() {
      const tenure = document.getElementById('tenureInput').value;
      const loanAmount = Number.parseFloat(document.getElementById('loanAmountInput').value) || 0;
      const interestRate = Number.parseFloat(document.getElementById('interestRateInput').value) || 0;

      document.getElementById('tenureDisplay').textContent = tenure;
      
      const monthlyRate = interestRate / 12 / 100;
      const numPayments = Number.parseInt(tenure);
      
      if (loanAmount > 0 && interestRate > 0 && tenure > 0) {
        const emiAmount = (loanAmount * monthlyRate * Math.pow(1 + monthlyRate, numPayments)) / 
                          (Math.pow(1 + monthlyRate, numPayments) - 1);
        
        const totalAmount = emiAmount * numPayments;
        const totalInterest = totalAmount - loanAmount;

        document.getElementById('emiAmount').textContent = Math.round(emiAmount).toLocaleString('en-IN');
        document.getElementById('totalInterest').textContent = Math.round(totalInterest).toLocaleString('en-IN');
        document.getElementById('totalAmount').textContent = Math.round(totalAmount).toLocaleString('en-IN');
      } else {
        document.getElementById('emiAmount').textContent = '0';
        document.getElementById('totalInterest').textContent = '0';
        document.getElementById('totalAmount').textContent = '0';
      }
    }

    function selectLoan(type) {
      document.getElementById('loanTypeSelect').value = type.charAt(0).toUpperCase() + type.slice(1);
      updateInterestRate();
    }

    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const closeSidebarBtn = document.getElementById('closeSidebarBtn');
    const sidebar = document.getElementById('sidebar');
    const sidebarBackdrop = document.getElementById('sidebarBackdrop');

    mobileMenuBtn.addEventListener('click', () => {
      sidebar.classList.remove('-translate-x-full');
      sidebarBackdrop.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });

    closeSidebarBtn.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    sidebarBackdrop.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    document.querySelectorAll('#sidebar a').forEach(link => {
      link.addEventListener('click', () => {
        sidebar.classList.add('-translate-x-full');
        sidebarBackdrop.classList.add('hidden');
        document.body.style.overflow = 'auto';
      });
    });

    document.getElementById('tenureInput').addEventListener('change', function() {
      updateInterestRate();
    });

    document.getElementById('tenureInput').addEventListener('input', function() {
      updateInterestRate();
    });
  </script>

</body>
</html>
