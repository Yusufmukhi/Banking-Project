
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Apply for Loan</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-8 py-5 flex justify-between items-center border-b border-slate-200">
    <div class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">BankTrust</div>
    <div class="text-right">
      <p class="font-semibold text-gray-900">Welcome, <%=Customers.username %></p>
      <p class="text-xs text-gray-500 mt-1">Customer ID: <%= Customers.cif %></p>
    </div>
  </header>

  <div class="flex min-h-screen bg-slate-50">

    <!-- SIDEBAR -->
    <aside class="w-64 bg-white shadow-lg min-h-screen p-6 border-r border-slate-200">
      <h2 class="font-bold text-gray-900 mb-6 text-lg uppercase tracking-wider text-sm">Navigation</h2>
      <ul class="space-y-2 text-gray-700">
        <li><a href="/" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m-4-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
          <span class="text-sm font-medium">Dashboard</span></a></li>
        <li><a href="/accounts/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
          <span class="text-sm font-medium">Accounts</span></a></li>
        <li><a href="/upi/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          <span class="text-sm font-medium">UPI</span></a></li>
        <li><a href="/deposits/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <span class="text-sm font-medium">Deposits</span></a></li>
        <li><a href="/loans/<%=id%>" class="flex items-center gap-3 px-4 py-3 bg-blue-50 text-blue-700 rounded-lg font-semibold border-l-4 border-blue-600">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <span class="text-sm font-medium">Loans</span></a></li>
        <li><a href="/transfers/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
          <span class="text-sm font-medium">Transfers</span></a></li>
        <li><a href="/statements/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
          <span class="text-sm font-medium">Statements</span></a></li>
        <li><a href="/profile/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
          <span class="text-sm font-medium">Profile</span></a></li>
        <li><a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
          <span class="text-sm font-medium">Logout</span></a></li>
      </ul>
      <hr class="my-6 border-slate-200">
      <ul class="text-sm space-y-2">
        <li><a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
          Block Debit Card</a></li>
        <li><a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          Report Fraud</a></li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-8 space-y-8 overflow-y-auto">

      <div>
        <h1 class="text-4xl font-bold text-gray-900">Apply for Loan</h1>
        <p class="text-gray-600 mt-2">Choose loan type and get instant approval</p>
      </div>

      <!-- LOAN TYPES -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-all cursor-pointer" onclick="selectLoan('personal')">
          <svg class="w-12 h-12 text-blue-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          <h3 class="text-xl font-bold text-gray-900">Personal Loan</h3>
          <p class="text-gray-600 text-sm mt-2">Up to ₹50 Lakhs</p>
          <p class="text-sm text-blue-600 font-semibold mt-3">Rate: 9.5% - 12% p.a.</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-all cursor-pointer" onclick="selectLoan('home')">
          <svg class="w-12 h-12 text-green-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m-4-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path></svg>
          <h3 class="text-xl font-bold text-gray-900">Home Loan</h3>
          <p class="text-gray-600 text-sm mt-2">Up to ₹1 Crore</p>
          <p class="text-sm text-green-600 font-semibold mt-3">Rate: 6.5% - 8% p.a.</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-all cursor-pointer" onclick="selectLoan('vehicle')">
          <svg class="w-12 h-12 text-red-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <h3 class="text-xl font-bold text-gray-900">Vehicle Loan</h3>
          <p class="text-gray-600 text-sm mt-2">Up to ₹30 Lakhs</p>
          <p class="text-sm text-red-600 font-semibold mt-3">Rate: 8% - 10% p.a.</p>
        </div>
      </div>

      <!-- LOAN APPLICATION FORM -->
      <form method="POST" action="/loans/apply/submit/<%=id%>" class="bg-white p-8 rounded-xl shadow-md border border-slate-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Loan Details</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Loan Type</label>
            <select id="loanTypeSelect" name="loan_type" onchange="updateInterestRate()" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
              <option value="">Select Loan Type</option>
              <option value="Personal">Personal Loan</option>
              <option value="Home">Home Loan</option>
              <option value="Vehicle">Vehicle Loan</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Loan Amount</label>
            <input type="number" id="loanAmountInput" name="loan_amount" placeholder="Enter amount in ₹" min="100000" step="100000" oninput="updateEMI()" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Tenure (Months)</label>
            <input type="range" id="tenureInput" name="tenure_months" min="12" max="60" value="24" oninput="updateEMI()" class="w-full">
            <p class="text-sm text-gray-600 mt-1"><span id="tenureDisplay">24</span> months</p>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Interest Rate (%)</label>
            <input type="number" id="interestRateInput" name="interest_rate" placeholder="p.a." step="0.1" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" readonly>
          </div>
        </div>

        <!-- EMI CALCULATOR -->
        <div class="bg-blue-50 p-6 rounded-lg border border-blue-200 mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Estimated EMI</h3>
          <div class="grid grid-cols-3 gap-6">
            <div>
              <p class="text-sm text-gray-600">Monthly EMI</p>
              <p class="text-3xl font-bold text-blue-600">₹<span id="emiAmount">0</span></p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Total Interest</p>
              <p class="text-2xl font-bold text-gray-900">₹<span id="totalInterest">0</span></p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Total Amount</p>
              <p class="text-2xl font-bold text-gray-900">₹<span id="totalAmount">0</span></p>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Linked Account</label>
            <select name="linked_account" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
              <option value="">Select Account</option>
              <% Accounts.forEach(acc => { %>
                <option value="<%= acc.account_id %>"><%= acc.account_type %> - <%= acc.account_number.slice(-4) %></option>
              <% }); %>
            </select>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Purpose</label>
            <input type="text" name="purpose" placeholder="e.g., Car purchase" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
        </div>

        <div class="flex gap-4">
          <button type="submit" class="flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">Apply for Loan</button>
          <a href="/loans/<%=id%>" class="flex-1 bg-slate-300 text-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-slate-400 transition-colors text-center">Cancel</a>
        </div>
      </form>

    </main>
  </div>

  <script>
    const interestRates = {
      'Personal': { 
        '12-24': 12,      // 12-24 months (highest for short term)
        '25-36': 10.75,   // 25-36 months (mid)
        '37-60': 9.5      // 37-60 months (lowest for long term)
      },
      'Home': { 
        '12-24': 8,       // 12-24 months
        '25-36': 7.25,    // 25-36 months
        '37-60': 6.5      // 37-60 months
      },
      'Vehicle': { 
        '12-24': 10,      // 12-24 months
        '25-36': 9.25,    // 25-36 months
        '37-60': 8        // 37-60 months
      }
    };

    function getInterestRateByTenure(loanType, tenure) {
      if (tenure <= 24) return interestRates[loanType]['12-24'];
      if (tenure <= 36) return interestRates[loanType]['25-36'];
      return interestRates[loanType]['37-60'];
    }

    function updateInterestRate() {
      const loanType = document.getElementById('loanTypeSelect').value;
      const tenure = Number.parseInt(document.getElementById('tenureInput').value);
      
      if (loanType && interestRates[loanType]) {
        const rate = getInterestRateByTenure(loanType, tenure);
        document.getElementById('interestRateInput').value = rate.toFixed(2);
        updateEMI();
      }
    }

    function updateEMI() {
      const tenure = document.getElementById('tenureInput').value;
      const loanAmount = Number.parseFloat(document.getElementById('loanAmountInput').value) || 0;
      const interestRate = Number.parseFloat(document.getElementById('interestRateInput').value) || 0;

      document.getElementById('tenureDisplay').textContent = tenure;
      
      // EMI = P * r * (1 + r)^n / ((1 + r)^n - 1)
      const monthlyRate = interestRate / 12 / 100;
      const numPayments = Number.parseInt(tenure);
      
      if (loanAmount > 0 && interestRate > 0 && tenure > 0) {
        const emiAmount = (loanAmount * monthlyRate * Math.pow(1 + monthlyRate, numPayments)) / 
                          (Math.pow(1 + monthlyRate, numPayments) - 1);
        
        const totalAmount = emiAmount * numPayments;
        const totalInterest = totalAmount - loanAmount;

        document.getElementById('emiAmount').textContent = Math.round(emiAmount).toLocaleString('en-IN');
        document.getElementById('totalInterest').textContent = Math.round(totalInterest).toLocaleString('en-IN');
        document.getElementById('totalAmount').textContent = Math.round(totalAmount).toLocaleString('en-IN');
      } else {
        document.getElementById('emiAmount').textContent = '0';
        document.getElementById('totalInterest').textContent = '0';
        document.getElementById('totalAmount').textContent = '0';
      }
    }

    function selectLoan(type) {
      document.getElementById('loanTypeSelect').value = type.charAt(0).toUpperCase() + type.slice(1);
      updateInterestRate();
    }

    document.getElementById('tenureInput').addEventListener('change', function() {
      updateInterestRate();
    });

    document.getElementById('tenureInput').addEventListener('input', function() {
      updateInterestRate();
    });
  </script>

</body>
</html>
