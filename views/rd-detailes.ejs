<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | RD Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-4 sm:px-8 py-5 flex justify-between items-center border-b border-slate-200">
    <div class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">BankTrust</div>
    
    <!-- Add hamburger menu button for mobile -->
    <button id="mobileMenuBtn" class="lg:hidden flex flex-col gap-1.5 p-2">
      <span class="w-6 h-0.5 bg-blue-600 transition-all duration-300"></span>
      <span class="w-6 h-0.5 bg-blue-600 transition-all duration-300"></span>
      <span class="w-6 h-0.5 bg-blue-600 transition-all duration-300"></span>
    </button>

    <div class="text-right hidden sm:block">
      <p class="font-semibold text-gray-900 text-sm sm:text-base">Welcome, <%=Customers.username %></p>
      <p class="text-xs text-gray-500 mt-1">Customer ID: <%= Customers.cif %></p>
    </div>
  </header>

  <!-- Add mobile menu overlay backdrop -->
  <div id="mobileMenuBackdrop" class="hidden fixed inset-0 bg-black bg-opacity-50 z-20 lg:hidden"></div>

  <div class="flex min-h-screen bg-slate-50">

    <!-- LEFT SIDEBAR -->
    <aside id="sidebar" class="fixed lg:static top-0 left-0 w-64 bg-white shadow-lg min-h-screen p-4 sm:p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-all duration-300 z-30 overflow-y-auto">
      <h2 class="font-bold text-gray-900 mb-6 text-sm sm:text-lg uppercase tracking-wider">Navigation</h2>

      <ul class="space-y-2 text-gray-700">
        <li>
          <a href="/dashboard" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m0 4a2 2 0 100-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span>Dashboard</span>
          </a>
        </li>

        <li>
          <a href="/accounts/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3  rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span>Accounts</span>
          </a>
        </li>

        <li>
          <a href="/upi/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3   rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span>UPI</span>
          </a>
        </li>

        <li>
          <a href="/deposits/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 bg-blue-50 text-blue-700 font-semibold border-l-4 border-blue-600 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Deposits</span>
          </a>
        </li>

        <li>
          <a href="/loans/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Loans</span>
          </a>
        </li>

        <li>
          <a href="/transfers/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <span>Transfers</span>
          </a>
        </li>

        <li>
          <a href="/statements/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span>Statements</span>
          </a>
        </li>

        <li>
          <a href="/profile/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Profile</span>
          </a>
        </li>

        <li>
          <a href="/logout" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 text-white hover:bg-red-700 rounded-lg transition-all text-sm sm:text-base bg-red-600">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span>Logout</span>
          </a>
        </li>
      </ul>

      <hr class="my-6 border-slate-200">

      <ul class="text-xs sm:text-sm space-y-2">
        <li>
          <a href="/block-card/<%=id%>" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Block Debit Card
          </a>
        </li>
        <li>
          <a href="/report-fraud/<%=id%>" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Report Fraud
          </a>
        </li>
      </ul>
    </aside>

    <!-- MAIN CONTENT AREA -->
    <!-- Added main content wrapper with proper left padding for desktop -->
    <main class="flex-1 w-full lg:pl-0 overflow-hidden">
      <div class="p-4 sm:p-8 space-y-6">

        <!-- BREADCRUMB -->
        <div class="flex items-center gap-2 text-sm text-gray-600">
          <a href="/deposits/<%=id%>" class="text-blue-600 hover:underline">Deposits</a>
          <span>→</span>
          <span>Recurring Deposit Details</span>
        </div>
        
        <!-- RD HEADER CARD -->
        <div class="bg-gradient-to-r from-purple-600 to-purple-700 p-6 sm:p-8 rounded-xl shadow-lg text-white">
          <p class="text-purple-100 text-xs sm:text-sm font-semibold uppercase tracking-wider">Recurring Deposit</p>
          <h1 class="text-2xl sm:text-4xl font-bold mt-3">₹<%= rd.monthly_amount %>/Month</h1>
          <p class="text-purple-100 mt-2 text-sm">RD ID: <%= rd.rd_id %></p>
          <div class="mt-6 flex flex-wrap gap-4">
            <span class="px-4 py-2 bg-white bg-opacity-20 rounded-lg text-xs sm:text-sm font-semibold">Active</span>
            <span class="px-4 py-2 bg-white bg-opacity-20 rounded-lg text-xs sm:text-sm font-semibold"><%= rd.total_months %> Months</span>
          </div>
        </div>

        <!-- RD DETAILS GRID -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <!-- DEPOSIT INFO -->
          <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200">
            <h2 class="text-lg font-bold text-gray-900 mb-6">Deposit Information</h2>
            <div class="space-y-4 text-sm">
              <div class="flex justify-between pb-3 border-b border-slate-100">
                <span class="text-gray-600">Monthly Amount</span>
                <span class="font-semibold text-gray-900">₹<%= rd.monthly_amount %></span>
              </div>
              <div class="flex justify-between pb-3 border-b border-slate-100">
                <span class="text-gray-600">Total Months</span>
                <span class="font-semibold text-gray-900"><%= rd.duration_months %></span>
              </div>
              <div class="flex justify-between pb-3 border-b border-slate-100">
                <span class="text-gray-600">Interest Rate</span>
                <span class="font-semibold text-gray-900"><%= rd.interest_rate %>% p.a.</span>
              </div>
              <div class="flex justify-between pb-3 border-b border-slate-100">
                <span class="text-gray-600">Last Deposit Date</span>
                <span class="font-semibold text-gray-900">
                  <%= rd.last_payout_date 
                      ? new Date(rd.last_payout_date).toDateString()
                      : '— Not deposited yet —' %>
                </span>
              </div>
              <div class="flex justify-between pt-2">
                <span class="text-gray-600 font-semibold">Next Deposit</span>
                <span class="font-bold text-green-600">
                  <%= rd.last_payout_date
                      ? new Date(rd.next_payout_date).toDateString()
                      : new Date(payment_schedule[0]?.scheduled_date).toDateString() %>
                </span>
              </div>
            </div>
          </div>

          <!-- MATURITY CALCULATION -->
          <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200">
            <h2 class="text-lg font-bold text-gray-900 mb-6">Maturity Calculation</h2>
            <div class="space-y-4 text-sm">
              <div class="flex justify-between pb-3 border-b border-slate-100">
                <span class="text-gray-600">Total Deposits</span>
                <span class="font-semibold text-gray-900">
                  ₹<%= totalDeposits %>
                </span>
              </div>
              <div class="flex justify-between pb-3 border-b border-slate-100">
                <span class="text-gray-600">Interest Earned</span>
                <span class="font-semibold text-green-600">₹<%=interestEarned %></span>
              </div>
              <div class="flex justify-between pt-2 bg-purple-50 p-3 rounded-lg">
                <span class="text-gray-700 font-semibold">Maturity Amount</span>
                <span class="font-bold text-purple-600">₹<%= maturityAmount %></span>
              </div>
            </div>
            <!-- MATURITY ACTION -->
            <div class="pt-4 border-t border-slate-200 mt-4">
              <% if (maturity) { %>
                <!-- RD COMPLETED -->
                <form action="/claim" method="get">
                  <button class="w-full bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition shadow-md">
                    Claim Maturity Amount
                  </button>
                </form>
              <% } else { %>
                <!-- RD NOT COMPLETED -->
                <form action="/rd/close" method="get">
                  <button class="w-full bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition shadow-md">
                    Close RD (Premature)
                  </button>
                </form>
              <% } %>
            </div>
          </div>

        </div>

        <!-- PAYOUT & SETTINGS -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <!-- DEPOSIT STATUS -->
          <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200">
            <h2 class="text-lg font-bold text-gray-900 mb-6">Deposit Status</h2>
            <div class="space-y-3 text-sm">
              <div class="p-3 bg-slate-50 rounded-lg">
                <p class="text-gray-600">Deposits Made</p>
                <p class="font-semibold text-gray-900 mt-1"><%= Paidmonths %> </p>
              </div>
              <div class="p-3 bg-slate-50 rounded-lg">
                <p class="text-gray-600">Remaining Months</p>
                <p class="font-semibold text-gray-900 mt-1"><%=  rd.duration_months -Paidmonths%></p>
              </div>
              <div class="p-3 bg-slate-50 rounded-lg">
                <p class="text-gray-600">Auto-Renewal</p>
                <p class="font-semibold text-gray-900 mt-1"><%= rd.auto_renewal ? 'Yes' : 'No' %></p>
              </div>
            </div>
          </div>

          <!-- LINKED ACCOUNT -->
          <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200">
            <h2 class="text-lg font-bold text-gray-900 mb-6">Linked Account</h2>
            <div class="p-4 bg-gradient-to-r from-purple-50 to-pink-50 rounded-lg border border-purple-200">
              <p class="text-gray-600 text-sm">Savings Account</p>
              <p class="font-bold text-gray-900 mt-2"><%= rd.account_number %></p>
              <p class="text-sm text-gray-500 mt-1">Monthly deposits debited from this account</p>
            </div>
          </div>

        </div>

        <!-- DEPOSIT SCHEDULE -->
        <div class="bg-white p-6 sm:p-8 rounded-xl shadow-md border border-slate-200">
          <h2 class="text-lg font-bold text-gray-900 mb-6">Deposit Schedule</h2>

          <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
              <thead>
                <tr class="border-b-2 border-slate-200 bg-slate-50">
                  <th class="py-3 px-4 font-semibold text-gray-700">Month</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Deposit Due</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Amount</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Status</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Action</th>
                </tr>
              </thead>

              <%
              const today = new Date();
              today.setHours(0,0,0,0);

              const lastPaid = rd.last_payout_date ? new Date(rd.last_payout_date) : null;
              if (lastPaid) lastPaid.setHours(0,0,0,0);
              %>

              <tbody>
              <% payment_schedule.forEach((pay, index) => {

                const scheduleDate = new Date(pay.scheduled_date);
                scheduleDate.setHours(0,0,0,0);

                const diffTime = scheduleDate.getTime() - today.getTime();
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

                let statusText = "";
                let statusClass = "";
                let canPay = false;

                if (pay.status === "PAID") {
                  statusText = "Completed";
                  statusClass = "bg-green-100 text-green-700";
                }
                else if (lastPaid && scheduleDate <= lastPaid) {
                  statusText = "Completed";
                  statusClass = "bg-green-100 text-green-700";
                }
                else if (diffDays > 7) {
                  statusText = "Scheduled";
                  statusClass = "bg-slate-100 text-slate-700";
                }
                else if (diffDays >= 0 && diffDays <= 7) {
                  statusText = "Payable";
                  statusClass = "bg-blue-100 text-blue-700";
                  canPay = true;
                }
                else {
                  statusText = "Late";
                  statusClass = "bg-red-100 text-red-700";
                  canPay = true;
                }
              %>

              <tr class="border-b border-slate-100 hover:bg-slate-50">
                <td class="py-3 px-4 text-xs sm:text-sm">Month <%= index + 1 %></td>

                <td class="py-3 px-4 text-xs sm:text-sm">
                  <%= scheduleDate.toDateString() %>
                </td>

                <td class="py-3 px-4 font-semibold text-purple-600 text-xs sm:text-sm">
                  ₹<%= rd.monthly_amount %>
                </td>

                <td class="py-3 px-4">
                  <span class="px-3 py-1 rounded-full text-xs font-semibold <%= statusClass %>">
                    <%= statusText %>
                  </span>
                </td>

                <td class="py-3 px-4">
                  <% if (canPay) { %>
                    <form action="/pay/<%= rd.rd_id %>" method="get">
                      <input type="hidden" name="scheduled_date" value="<%= pay.scheduled_date %>">
                      <input type="hidden" name="amount" value="<%= rd.monthly_amount %>">
                      <input type="hidden" name="month_no" value="<%= index + 1 %>">
                      <button class="px-3 sm:px-4 py-2 bg-purple-600 text-white text-xs font-semibold rounded-lg hover:bg-purple-700 transition-colors">
                        Pay Now
                      </button>
                    </form>
                  <% } else { %>
                    <span class="text-xs text-gray-400">—</span>
                  <% } %>
                </td>
              </tr>

              <% }); %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <button class="flex-1 bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors shadow-md">
            Close RD
          </button>
          <button class="flex-1 bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors shadow-md">
            Download Certificate
          </button>
        </div>

      </div>
    </main>

  </div>

  <script>
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const sidebar = document.getElementById('sidebar');
    const mobileMenuBackdrop = document.getElementById('mobileMenuBackdrop');

    function openMenu() {
      sidebar.classList.remove('-translate-x-full');
      mobileMenuBackdrop.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      sidebar.classList.add('-translate-x-full');
      mobileMenuBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    }

    mobileMenuBtn.addEventListener('click', openMenu);
    mobileMenuBackdrop.addEventListener('click', closeMenu);

    sidebar.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });
  </script>

</body>
</html>
