  <div class="flex">

    <!-- SIDEBAR -->
    <aside class="w-64 bg-white shadow-md min-h-screen p-5">
      <h2 class="font-bold text-gray-700 mb-4 text-lg">Navigation</h2>

      <ul class="space-y-3 text-gray-700 text-sm">
        <li><a href="#" class="block px-3 py-2 hover:bg-blue-100 rounded">Dashboard</a></li>
        <li><a href="#" class="block px-3 py-2 hover:bg-blue-100 rounded">Accounts</a></li>
