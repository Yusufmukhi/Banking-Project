<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BankTrust | Account Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

<!-- Enhanced header with gradient background -->
<header class="bg-gradient-to-r from-blue-700 to-indigo-700 shadow-lg px-4 sm:px-8 py-5 flex justify-between items-center sticky top-0 z-40">
  <!-- Added hamburger button for mobile -->
  <button id="menuBtn" class="lg:hidden flex flex-col gap-1.5 p-2 rounded-lg hover:bg-blue-600 transition-all duration-300 focus:outline-none">
    <span class="hamburger-line h-0.5 w-6 bg-white transition-all duration-300"></span>
    <span class="hamburger-line h-0.5 w-6 bg-white transition-all duration-300"></span>
    <span class="hamburger-line h-0.5 w-6 bg-white transition-all duration-300"></span>
  </button>

  <div class="text-xl sm:text-2xl font-bold text-white">BankTrust</div>
  <div class="text-right">
    <p class="font-semibold text-white text-sm sm:text-base">Welcome, <%= cust.username %></p>
    <p class="text-xs text-blue-100">Customer ID: <%= cust.id %></p>
  </div>
</header>

<div class="flex">

  <!-- Mobile backdrop overlay -->
      <aside id="sidebar" class="fixed lg:static top-0 left-0 w-64 bg-white shadow-lg min-h-screen p-4 sm:p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-all duration-300 z-30 overflow-y-auto">
      <h2 class="font-bold text-gray-900 mb-6 text-sm sm:text-lg uppercase tracking-wider">Navigation</h2>

      <ul class="space-y-2 text-gray-700">
        <li>
          <a href="/dashboard" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m0 4a2 2 0 100-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span>Dashboard</span>
          </a>
        </li>

        <li>
          <a href="/accounts/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 bg-blue-50 text-blue-700 font-semibold border-l-4 border-blue-600  rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span>Accounts</span>
          </a>
        </li>

        <li>
          <a href="/upi/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span>UPI</span>
          </a>
        </li>

        <li>
          <a href="/deposits/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Deposits</span>
          </a>
        </li>

        <li>
          <a href="/loans/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Loans</span>
          </a>
        </li>

        <li>
          <a href="/transfers/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <span>Transfers</span>
          </a>
        </li>

        <li>
          <a href="/statements/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span>Statements</span>
          </a>
        </li>

        <li>
          <a href="/profile/<%=id%>" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 hover:bg-slate-100 rounded-lg transition-all text-sm sm:text-base">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Profile</span>
          </a>
        </li>

        <li>
          <a href="/logout" class="flex items-center gap-3 px-3 sm:px-4 py-2 sm:py-3 text-white hover:bg-red-700 rounded-lg transition-all text-sm sm:text-base bg-red-600">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span>Logout</span>
          </a>
        </li>
      </ul>

      <hr class="my-6 border-slate-200">

      <ul class="text-xs sm:text-sm space-y-2">
        <li>
          <a href="/block-card/<%=id%>" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Block Debit Card
          </a>
        </li>
        <li>
          <a href="/report-fraud/<%=id%>" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Report Fraud
          </a>
        </li>
      </ul>
    </aside>

    <!-- Mobile overlay backdrop for sidebar -->
    
  <!-- MAIN -->
  <main class="flex-1 p-4 sm:p-8 space-y-8 overflow-y-auto">

    <!-- Enhanced account summary section with gradient and better spacing -->
    <section class="bg-white p-6 sm:p-8 rounded-2xl shadow-md border border-slate-200">

      <h1 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">Account Summary</h1>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 text-sm mb-8">
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">Account Number</p>
          <p class="text-gray-900 font-semibold"><%= acc.account_number %></p>
        </div>
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">Account Type</p>
          <p class="text-gray-900 font-semibold"><%= acc.account_type %></p>
        </div>
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">Customer ID</p>
          <p class="text-gray-900 font-semibold"><%= cust.cif %></p>
        </div>
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">Status</p>
          <% if (acc.status === "ACTIVE") {%>
            <span class="inline-block px-3 py-1 bg-green-100 text-green-700 font-semibold text-xs rounded-full">Active</span>
          <%} else{ %> 
            <span class="inline-block px-3 py-1 bg-red-100 text-red-700 font-semibold text-xs rounded-full"><%=acc.status%></span>
          <% } %>
        </div>
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">Branch</p>
          <p class="text-gray-900 font-semibold"><%= acc.branch %></p>
        </div>
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">IFSC Code</p>
          <p class="text-gray-900 font-semibold"><%= acc.ifsc %></p>
        </div>
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">Opening Date</p>
          <p class="text-gray-900 font-semibold"><%=acc.opened_at.toISOString().split("T")[0]%></p>
        </div>
        <div class="pb-4 border-b border-slate-100">
          <p class="text-gray-600 text-xs uppercase tracking-wider font-semibold mb-1">KYC Status</p>
          <span class="inline-block px-3 py-1 bg-blue-100 text-blue-700 font-semibold text-xs rounded-full">Full KYC Done</span>
        </div>
      </div>

      <!-- Enhanced balance display with gradient background -->
      <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-6 rounded-xl border border-green-200">
        <p class="text-sm text-gray-600 uppercase tracking-wider font-semibold mb-2">Available Balance</p>
        <p class="text-2xl sm:text-4xl font-bold text-green-700">₹<%= acc.balance %></p>
      </div>

    </section>

    <!-- Enhanced account services section with gradient buttons -->
    <section class="bg-white p-6 sm:p-8 rounded-2xl shadow-md border border-slate-200">
      <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">Account Services</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <button class="px-4 sm:px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg font-semibold hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-md hover:shadow-lg text-sm sm:text-base">
          <svg class="inline-block w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/></svg>
          Transfer Money
        </button>
        <button class="px-4 sm:px-6 py-3 bg-gradient-to-r from-slate-600 to-slate-700 text-white rounded-lg font-semibold hover:from-slate-700 hover:to-slate-800 transition-all duration-200 shadow-md hover:shadow-lg text-sm sm:text-base">
          <svg class="inline-block w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3M3 17V7a2 2 0 012-2h6.586a1 1 0 01.707.293l6.414 6.414a1 1 0 01.293.707V17a2 2 0 01-2 2H5a2 2 0 01-2-2z"/></svg>
          Download Statement
        </button>
        <button class="px-4 sm:px-6 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white rounded-lg font-semibold hover:from-indigo-700 hover:to-indigo-800 transition-all duration-200 shadow-md hover:shadow-lg text-sm sm:text-base">
          <svg class="inline-block w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
          Request Chequebook
        </button>
        <button class="px-4 sm:px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-lg font-semibold hover:from-red-700 hover:to-red-800 transition-all duration-200 shadow-md hover:shadow-lg text-sm sm:text-base">
          <svg class="inline-block w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          Freeze Account
        </button>
      </div>
    </section>

    <!-- Enhanced transactions table with better styling and hover effects -->
    <section class="bg-white p-6 sm:p-8 rounded-2xl shadow-md border border-slate-200">
      <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">Recent Transactions</h2>

      <div class="overflow-x-auto">
        <table class="w-full text-left text-xs sm:text-sm">
          <thead>
            <tr class="border-b-2 border-slate-200 bg-slate-50">
              <th class="py-3 px-2 sm:px-4 text-gray-600 font-semibold uppercase text-xs tracking-wider">Date</th>
              <th class="py-3 px-2 sm:px-4 text-gray-600 font-semibold uppercase text-xs tracking-wider">Description</th>
              <th class="py-3 px-2 sm:px-4 text-gray-600 font-semibold uppercase text-xs tracking-wider">Type</th>
              <th class="py-3 px-2 sm:px-4 text-gray-600 font-semibold uppercase text-xs tracking-wider">Amount</th>
              <th class="py-3 px-2 sm:px-4 text-gray-600 font-semibold uppercase text-xs tracking-wider">Balance</th>
            </tr>
          </thead>
         <% if (transactions && transactions.length > 0) { %>
  <tbody class="text-gray-700 divide-y divide-slate-100">

    <% transactions.forEach(t => { 
      const isDebit = t.tx_type === 'DEBIT';
    %>

      <tr class="hover:bg-slate-50 transition-colors duration-150">

        <!-- Date -->
        <td class="py-3 px-2 sm:px-4 text-sm text-gray-600">
          <%= new Date(t.created_at).toLocaleDateString('en-IN', {
            day: '2-digit',
            month: 'short',
            year: 'numeric'
          }) %>
        </td>

        <!-- Description -->
        <td class="py-3 px-2 sm:px-4 font-medium">
          <%= t.remarks %>
        </td>

        <!-- Type -->
        <td class="py-3 px-2 sm:px-4 font-semibold
          <%= isDebit ? 'text-red-600' : 'text-green-600' %>">
          <%= isDebit ? 'Debit' : 'Credit' %>
        </td>

        <!-- Amount -->
        <td class="py-3 px-2 sm:px-4 font-semibold text-right
          <%= isDebit ? 'text-red-600' : 'text-green-600' %>">
          <%= isDebit ? '-' : '+' %>₹<%= Number(t.amount).toLocaleString('en-IN') %>
        </td>

        <!-- Balance -->
        <td class="py-3 px-2 sm:px-4 font-semibold text-gray-900 text-right">
          ₹<%= Number(t.balance_after).toLocaleString('en-IN') %>
        </td>

      </tr>

    <% }) %>
  </tbody>
<% } else { %>

  <!-- Empty State -->
  <tbody>
    <tr>
      <td colspan="5" class="py-6 text-center text-gray-500 text-sm">
        No transaction history available
      </td>
    </tr>
  </tbody>

<% } %>

        </table>
      </div>
    </section>

  </main>

</div>

<script>
  const menuBtn = document.getElementById('menuBtn');
  const sidebar = document.getElementById('sidebar');
  const menuBackdrop = document.getElementById('menuBackdrop');
  const hamburgerLines = document.querySelectorAll('.hamburger-line');

  menuBtn.addEventListener('click', () => {
    const isOpen = sidebar.classList.contains('translate-x-0');
    
    if (isOpen) {
      sidebar.classList.remove('translate-x-0');
      sidebar.classList.add('-translate-x-full');
      menuBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    } else {
      sidebar.classList.remove('-translate-x-full');
      sidebar.classList.add('translate-x-0');
      menuBackdrop.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  });

  // Close menu when clicking backdrop
  menuBackdrop.addEventListener('click', () => {
    sidebar.classList.remove('translate-x-0');
    sidebar.classList.add('-translate-x-full');
    menuBackdrop.classList.add('hidden');
    document.body.style.overflow = 'auto';
  });

  // Close menu when clicking a link
  const sidebarLinks = sidebar.querySelectorAll('a');
  sidebarLinks.forEach(link => {
    link.addEventListener('click', () => {
      sidebar.classList.remove('translate-x-0');
      sidebar.classList.add('-translate-x-full');
      menuBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });
  });
</script>

</body>
</html>
