<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BankTrust | UPI</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-slate-50 to-slate-100 text-gray-800">

  <!-- NAV -->
  <header class="bg-white shadow-md px-4 sm:px-8 py-3 sm:py-5 flex justify-between items-center sticky top-0 z-40 border-b border-slate-200">
    <!-- Updated hamburger button with blue branding and responsive sizing -->
    <button id="mobileMenuBtn" class="lg:hidden flex flex-col gap-1 p-2 rounded-lg transition-all duration-300 group hover:bg-blue-50 active:bg-blue-100">
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:rotate-45 group-active:translate-y-1.5"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 group-active:opacity-0"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:-rotate-45 group-active:-translate-y-1.5"></span>
    </button>

    <div class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent flex-1 text-center lg:flex-none lg:text-left">BankTrust</div>

    <div class="hidden sm:block text-right">
      <p class="font-semibold text-gray-900 text-sm sm:text-base">Welcome, <%=cust.username %></p>
      <p class="text-xs text-gray-500">Customer ID: <%= cust.cif %></p>
    </div>
  </header>

  <div class="flex min-h-screen relative">

    <!-- Responsive sidebar with hamburger overlay support -->
    <aside id="sidebar" class="fixed lg:static top-0 left-0 w-64 bg-white shadow-2xl min-h-screen p-4 sm:p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-all duration-300 ease-in-out z-30 overflow-y-auto">
      <!-- Close button -->
      <button id="closeSidebarBtn" class="lg:hidden absolute top-4 right-4 p-1 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="font-bold text-gray-900 mb-6 text-sm sm:text-lg uppercase tracking-wider">Navigation</h2>

      <ul class="space-y-1 text-gray-700 text-sm">
        <li><a href="/dashboard" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m0 4a2 2 0 100-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
          </svg>
          Dashboard
        </a></li>
        <li><a href="/accounts/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
          </svg>
          Accounts
        </a></li>
        <li><a href="/upi/<%=id%>" class="flex items-center gap-3 px-4 py-3 bg-blue-500 text-white rounded-lg font-semibold transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          UPI
        </a></li>
        <li><a href="/deposits/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Deposits
        </a></li>
        <li><a href="/loans/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Loans
        </a></li>
        <li><a href="/transfers/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
          Transfers
        </a></li>
        <li><a href="/statements/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Statements
        </a></li>
        <li><a href="/profile/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          Profile
        </a></li>
        <li><a href="/logout" class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-red-50 hover:text-red-600 rounded-lg transition-all duration-200">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Logout
        </a></li>
      </ul>
      <hr class="my-6 border-slate-200">

      <ul class="text-xs sm:text-sm space-y-2">
        <li><a href="#" class="flex items-center gap-2 text-gray-700 hover:text-blue-600 font-medium transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 0v2m0-2h2m-2 0h-2m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Block Debit Card
        </a></li>
        <li><a href="#" class="flex items-center gap-2 text-gray-700 hover:text-blue-600 font-medium transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4v2m0 0v2m0-2h2m-2 0h-2m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Report Fraud
        </a></li>
      </ul>
    </aside>

    <!-- Mobile overlay backdrop -->
    <div id="sidebarBackdrop" class="fixed inset-0 bg-black bg-opacity-50 hidden lg:hidden z-20"></div>

    <!-- MAIN -->
    <main class="flex-1 p-4 sm:p-8 space-y-6 sm:space-y-8 overflow-y-auto w-full">

      <h1 class="text-2xl sm:text-4xl font-bold text-gray-900">UPI Overview</h1>

      <!-- BALANCE CARD -->
      <section class="bg-gradient-to-br from-blue-600 to-indigo-700 p-6 sm:p-8 rounded-2xl shadow-lg text-white">
        <p class="text-blue-100 text-xs sm:text-sm font-medium">Linked Account Balance</p>
        <p class="text-3xl sm:text-5xl font-bold mt-3"><%= acc.balance %></p>
        <p class="text-blue-100 text-xs sm:text-sm mt-4">Ready to send & receive payments</p>
      </section>

      <!-- UPI INFO -->
      <section class="bg-white p-6 sm:p-8 rounded-2xl shadow-md border border-slate-200 space-y-4">
        <div class="flex items-center gap-3">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <h2 class="text-lg sm:text-xl font-bold text-gray-900">Your UPI ID</h2>
        </div>
        <p class="text-blue-600 font-semibold text-base sm:text-lg bg-blue-50 p-3 rounded-lg"><%= acc.upi_handle %></p>

        <div class="mt-6 flex flex-col sm:flex-row items-start gap-6 sm:gap-8">
          <!-- QR -->
          <div class="w-40 h-40 bg-gradient-to-br from-slate-100 to-slate-200 rounded-xl flex items-center justify-center border-2 border-slate-300 flex-shrink-0">
            <span class="text-gray-500 text-sm">QR Code</span>
          </div>

          <div class="space-y-4 flex-1">
            <p class="text-gray-700 text-sm sm:text-base">Scan this QR to send money instantly</p>

            <div class="flex flex-col sm:flex-row gap-3">
              <button class="px-4 sm:px-6 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg text-sm font-medium hover:from-blue-700 hover:to-indigo-700 transition shadow-md">Download QR</button>
              <button class="px-4 sm:px-6 py-2 bg-slate-700 text-white rounded-lg text-sm font-medium hover:bg-slate-800 transition shadow-md">Share QR</button>
            </div>
          </div>

        </div>
      </section>

      <!-- LINKED ACCOUNT -->
      <section class="bg-white p-6 sm:p-8 rounded-2xl shadow-md border border-slate-200">
        <div class="flex items-center gap-3 mb-4">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
          <h2 class="text-lg sm:text-xl font-bold text-gray-900">Linked Bank Account</h2>
        </div>

        <div class="border-2 border-slate-200 rounded-xl p-4 sm:p-5 space-y-2 bg-slate-50">
          <p class="text-sm sm:text-base text-gray-700"><span class="font-semibold text-gray-900">Account Number:</span> <%= acc.account_number %></p>
          <p class="text-sm sm:text-base text-gray-700"><span class="font-semibold text-gray-900">IFSC Code:</span> <%= acc.ifsc %></p>
          <p class="text-sm sm:text-base text-gray-700"><span class="font-semibold text-gray-900">Account Type:</span> <%=  acc.account_type %></p>
        </div>
        <div class="mt-6">
          <a href="/details/<%=accid%>" class="inline-block mt-8 px-5 sm:px-6 py-2 sm:py-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white rounded-lg text-sm sm:text-base font-medium hover:from-green-700 hover:to-emerald-700 transition shadow-md">
            Check Balance
          </a>
        </div>
      </section>

      <!-- MANAGE -->
      <section class="bg-white p-6 sm:p-8 rounded-2xl shadow-md border border-slate-200 space-y-3">
        <div class="flex items-center gap-3 mb-4">
          <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
          <h2 class="text-lg sm:text-xl font-bold text-gray-900">Manage UPI</h2>
        </div>

        <button class="flex items-center gap-3 w-full bg-blue-50 hover:bg-blue-100 text-blue-700 py-2 sm:py-3 rounded-lg font-medium px-4 transition border border-blue-200 text-sm sm:text-base">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path></svg>
          Reset UPI PIN
        </button>

        <button class="flex items-center gap-3 w-full bg-slate-100 hover:bg-slate-200 text-slate-700 py-2 sm:py-3 rounded-lg font-medium px-4 transition border border-slate-200 text-sm sm:text-base">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
          Change UPI ID
        </button>

        <button class="flex items-center gap-3 w-full bg-red-50 hover:bg-red-100 text-red-600 py-2 sm:py-3 rounded-lg font-medium px-4 transition border border-red-200 text-sm sm:text-base">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
          Disable UPI
        </button>

      </section>

      <!-- UPI TRANSACTIONS -->
      <section class="bg-white p-6 sm:p-8 rounded-2xl shadow-md border border-slate-200">
        <div class="flex items-center gap-3 mb-6">
          <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>
          <h2 class="text-lg sm:text-xl font-bold text-gray-900">Recent UPI Transactions</h2>
        </div>

        <ul class="space-y-2 sm:space-y-3">
          <li class="flex justify-between items-center p-3 sm:p-4 bg-slate-50 rounded-lg border border-slate-200 hover:bg-slate-100 transition text-sm sm:text-base">
            <span class="text-gray-700">UPI to Amazon</span>
            <span class="text-red-600 font-semibold">-₹999</span>
          </li>
          <li class="flex justify-between items-center p-3 sm:p-4 bg-slate-50 rounded-lg border border-slate-200 hover:bg-slate-100 transition text-sm sm:text-base">
            <span class="text-gray-700">UPI from Arjun</span>
            <span class="text-green-600 font-semibold">+₹1,000</span>
          </li>
          <li class="flex justify-between items-center p-3 sm:p-4 bg-slate-50 rounded-lg border border-slate-200 hover:bg-slate-100 transition text-sm sm:text-base">
            <span class="text-gray-700">UPI to Zomato</span>
            <span class="text-red-600 font-semibold">-₹420</span>
          </li>
        </ul>
      </section>

    </main>
  </div>

  <script>
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const closeSidebarBtn = document.getElementById('closeSidebarBtn');
    const sidebar = document.getElementById('sidebar');
    const sidebarBackdrop = document.getElementById('sidebarBackdrop');

    mobileMenuBtn.addEventListener('click', () => {
      sidebar.classList.remove('-translate-x-full');
      sidebarBackdrop.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });

    closeSidebarBtn.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    sidebarBackdrop.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    // Close sidebar on link click
    document.querySelectorAll('#sidebar a').forEach(link => {
      link.addEventListener('click', () => {
        sidebar.classList.add('-translate-x-full');
        sidebarBackdrop.classList.add('hidden');
        document.body.style.overflow = 'auto';
      });
    });
  </script>

</body>
</html>
