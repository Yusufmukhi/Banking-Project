<% if(user){ %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Claim Maturity Amount</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-8 py-5 flex justify-between items-center border-b border-slate-200">
    <div class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">BankTrust</div>

    <div class="text-right">
      <p class="font-semibold text-gray-900">Welcome, <%=Customers.username %></p>
      <p class="text-xs text-gray-500 mt-1">Customer ID: <%= Customers.cif %></p>
    </div>
  </header>

  <div class="flex min-h-screen bg-slate-50">

    <!-- LEFT SIDEBAR -->
    <aside class="w-64 bg-white shadow-lg min-h-screen p-6 border-r border-slate-200">
      <h2 class="font-bold text-gray-900 mb-6 text-lg uppercase tracking-wider text-sm">Navigation</h2>

      <ul class="space-y-2 text-gray-700">
        <li>
          <a href="/" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m-4-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span class="text-sm font-medium">Dashboard</span>
          </a>
        </li>

        <li>
          <a href="/accounts/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span class="text-sm font-medium">Accounts</span>
          </a>
        </li>

        <li>
          <a href="/upi/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span class="text-sm font-medium">UPI</span>
          </a>
        </li>

        <li>
          <a href="/deposits/<%=id%>" class="flex items-center gap-3 px-4 py-3 bg-blue-50 text-blue-700 rounded-lg font-semibold border-l-4 border-blue-600 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm font-medium">Deposits</span>
          </a>
        </li>

        <li>
          <a href="/loans/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm font-medium">Loans</span>
          </a>
        </li>

        <li>
          <a href="/transfers/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <span class="text-sm font-medium">Transfers</span>
          </a>
        </li>

        <li>
          <a href="/statements/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="text-sm font-medium">Statements</span>
          </a>
        </li>

        <li>
          <a href="/profile/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-100 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-sm font-medium">Profile</span>
          </a>
        </li>

        <li>
          <a href="/logout" class="flex items-center gap-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span class="text-sm font-medium">Logout</span>
          </a>
        </li>
      </ul>

      <hr class="my-6 border-slate-200">

      <ul class="text-sm space-y-2">
        <li>
          <a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Block Debit Card
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Report Fraud
          </a>
        </li>
      </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-8 space-y-8 overflow-y-auto">

      <!-- PAGE HEADER -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900">Claim Maturity Amount</h1>
        <p class="text-gray-600 mt-2">View and claim your matured Fixed Deposits and Recurring Deposits</p>
      </div>

      <!-- MATURED DEPOSITS SUMMARY -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Matured Fixed Deposits</p>
          <p class="text-3xl font-bold text-blue-600 mt-3"><%= maturedFD ? maturedFD.length : 0 %></p>
          <p class="text-sm text-gray-600 mt-2">Ready to claim</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Matured Recurring Deposits</p>
          <p class="text-3xl font-bold text-purple-600 mt-3"><%= maturedRD ? maturedRD.length : 0 %></p>
          <p class="text-sm text-gray-600 mt-2">Ready to claim</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Total Claimable Amount</p>
          <p class="text-3xl font-bold text-green-600 mt-3">₹<%= totalClaimable || 0 %></p>
          <p class="text-sm text-gray-600 mt-2">Including interest</p>
        </div>
      </div>

      <!-- MATURED FIXED DEPOSITS -->
      <section class="bg-white p-8 rounded-xl shadow-md border border-slate-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Matured Fixed Deposits (FD)
        </h2>

        <% if (maturedFD && maturedFD.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
              <thead>
                <tr class="border-b-2 border-slate-200 bg-slate-50">
                  <th class="py-3 px-4 font-semibold text-gray-700">FD Number</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Principal Amount</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Interest Earned</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Maturity Amount</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Maturity Date</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Action</th>
                </tr>
              </thead>
              <tbody class="text-gray-700">
                <% maturedFD.forEach(fd => { %>
                  <tr class="border-b border-slate-100 hover:bg-slate-50 transition-colors">
                    <td class="py-4 px-4 font-semibold text-gray-900"><%= fd.fd_number %></td>
                    <td class="py-4 px-4">₹<%= fd.principal %></td>
                    <td class="py-4 px-4 text-green-600 font-semibold">+₹<%= fd.interest %></td>
                    <td class="py-4 px-4 text-lg font-bold text-blue-600">₹<%= fd.maturity_amount %></td>
                    <td class="py-4 px-4"><%= fd.maturity_date.toLocaleDateString() %></td>
                    <td class="py-4 px-4">
                      <form action="/maturity/claim-fd" method="POST" class="inline">
                        <input type="hidden" name="fd_id" value="<%= fd.id %>">
                        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors">Claim Now</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-500 text-center py-8">No matured fixed deposits available</p>
        <% } %>
      </section>

      <!-- MATURED RECURRING DEPOSITS -->
      <section class="bg-white p-8 rounded-xl shadow-md border border-slate-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
          <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Matured Recurring Deposits (RD)
        </h2>

        <% if (maturedRD && maturedRD.length > 0) { %>
          <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
              <thead>
                <tr class="border-b-2 border-slate-200 bg-slate-50">
                  <th class="py-3 px-4 font-semibold text-gray-700">RD Number</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Monthly Contribution</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Total Deposited</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Interest Earned</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Maturity Amount</th>
                  <th class="py-3 px-4 font-semibold text-gray-700">Action</th>
                </tr>
              </thead>
              <tbody class="text-gray-700">
                <% maturedRD.forEach(rd => { %>
                  <tr class="border-b border-slate-100 hover:bg-slate-50 transition-colors">
                    <td class="py-4 px-4 font-semibold text-gray-900"><%= rd.rd_number %></td>
                    <td class="py-4 px-4">₹<%= rd.monthly_amount %></td>
                    <td class="py-4 px-4">₹<%= rd.total_deposited %></td>
                    <td class="py-4 px-4 text-green-600 font-semibold">+₹<%= rd.interest %></td>
                    <td class="py-4 px-4 text-lg font-bold text-purple-600">₹<%= rd.maturity_amount %></td>
                    <td class="py-4 px-4">
                      <form action="/maturity/claim-rd" method="POST" class="inline">
                        <input type="hidden" name="rd_id" value="<%= rd.id %>">
                        <button type="submit" class="px-4 py-2 bg-purple-600 text-white rounded-lg font-semibold hover:bg-purple-700 transition-colors">Claim Now</button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-gray-500 text-center py-8">No matured recurring deposits available</p>
        <% } %>
      </section>

      <!-- CLAIM INFO -->
      <section class="bg-blue-50 p-8 rounded-xl border-l-4 border-blue-600">
        <h3 class="text-xl font-bold text-blue-900 mb-4">How to Claim Your Maturity Amount</h3>
        <ul class="space-y-3 text-blue-800">
          <li class="flex items-start gap-3">
            <span class="font-bold text-blue-600">1.</span>
            <span>Click "Claim Now" button next to your matured deposit</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="font-bold text-blue-600">2.</span>
            <span>Review the maturity amount including principal and interest</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="font-bold text-blue-600">3.</span>
            <span>Select the destination account for credit</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="font-bold text-blue-600">4.</span>
            <span>Confirm and the amount will be credited instantly</span>
          </li>
        </ul>
      </section>

    </main>

  </div>

</body>
</html>
<% }
