<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BankTrust | Claim Maturity</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-50 text-gray-800">

  <!-- TOP NAV -->
  <header class="bg-white shadow-md px-4 sm:px-8 py-3 sm:py-5 flex justify-between items-center sticky top-0 z-40 border-b border-slate-200">
    <!-- Added hamburger button with blue branding -->
    <button id="mobileMenuBtn" class="lg:hidden flex flex-col gap-1 p-2 rounded-lg transition-all duration-300 group hover:bg-blue-50 active:bg-blue-100">
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:rotate-45 group-active:translate-y-1.5"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 group-active:opacity-0"></span>
      <span class="w-6 h-0.5 bg-blue-600 group-hover:bg-blue-700 transition-colors duration-300 origin-center transform group-active:-rotate-45 group-active:-translate-y-1.5"></span>
    </button>

    <div class="text-2xl sm:text-3xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent flex-1 text-center lg:flex-none lg:text-left lg:ml-0">BankTrust</div>

    <div class="hidden sm:block text-right order-3">
      <p class="font-semibold text-gray-900 text-sm sm:text-base">Welcome, <%=Customers.username %></p>
      <p class="text-xs text-gray-500">Customer ID: <%= Customers.cif %></p>
    </div>
  </header>

  <div class="flex min-h-screen relative">

    <!-- Made sidebar responsive with mobile overlay -->
    <aside id="sidebar" class="fixed lg:static top-0 left-0 w-64 bg-white shadow-2xl min-h-screen p-4 sm:p-6 border-r border-slate-200 transform -translate-x-full lg:translate-x-0 transition-all duration-300 ease-in-out z-30 overflow-y-auto">
      <!-- Close button -->
      <button id="closeSidebarBtn" class="lg:hidden absolute top-4 right-4 p-1 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <h2 class="font-bold text-gray-900 mb-6 text-sm sm:text-lg uppercase tracking-wider">Navigation</h2>

      <ul class="space-y-2 text-gray-700">
        <li>
          <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-3m0 0l7-4 7 4M5 9v10a1 1 0 001 1h12a1 1 0 001-1V9m-9 11l4-4m0 0l4 4m-4-4v4m0 4a2 2 0 100-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span class="text-sm font-medium">Dashboard</span>
          </a>
        </li>

        <li>
          <a href="/accounts/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span class="text-sm font-medium">Accounts</span>
          </a>
        </li>

        <li>
          <a href="/upi/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <span class="text-sm font-medium">UPI</span>
          </a>
        </li>

        <li>
          <a href="/deposits/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm font-medium">Deposits</span>
          </a>
        </li>

        <li>
          <a href="/loans/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm font-medium">Loans</span>
          </a>
        </li>

        <li>
          <a href="/transfers/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 11-8 0 4 4 0 018 0zM15 13l-3-3m0 0l-3 3m3-3v12"></path>
            </svg>
            <span class="text-sm font-medium">Transfers</span>
          </a>
        </li>

        <li>
          <a href="/statements/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span class="text-sm font-medium">Statements</span>
          </a>
        </li>

        <li>
          <a href="/profile/<%=id%>" class="flex items-center gap-3 px-4 py-3 hover:bg-blue-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span class="text-sm font-medium">Profile</span>
          </a>
        </li>

        <li>
          <a href="/logout" class="flex items-center gap-3 px-4 py-3 text-gray-900 hover:bg-red-500 rounded-lg transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span class="text-sm font-medium">Logout</span>
          </a>
        </li>
      </ul>

      <hr class="my-6 border-slate-200">

      <ul class="text-sm space-y-2">
        <li>
          <a href="#" class="flex items-center gap-2 text-gray-700 hover:text-blue-600 font-medium transition-colors text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            Block Debit Card
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center gap-2 text-gray-700 hover:text-blue-600 font-medium transition-colors text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Report Fraud
          </a>
        </li>
      </ul>
    </aside>

    <!-- Mobile overlay backdrop -->
    <div id="sidebarBackdrop" class="fixed inset-0 bg-black bg-opacity-50 hidden lg:hidden z-20"></div>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-4 sm:p-8 space-y-6 sm:space-y-8 overflow-y-auto w-full">

      <!-- Made summary cards responsive with grid columns -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Matured RD Claims</p>
          <p class="text-2xl sm:text-3xl font-bold text-purple-600 mt-3"><%= rdclaim %></p>
          <p class="text-xs sm:text-sm text-gray-600 mt-2">Deposits ready to claim</p>
        </div>

        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Matured FD Claims</p>
          <p class="text-2xl sm:text-3xl font-bold text-blue-600 mt-3"><%= fdclaim %></p>
          <p class="text-xs sm:text-sm text-gray-600 mt-2">Deposits ready to claim</p>
        </div>

        <div class="bg-white p-4 sm:p-6 rounded-xl shadow-md border border-slate-200 hover:shadow-lg transition-shadow">
          <p class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Total Interest</p>
          <p class="text-2xl sm:text-3xl font-bold text-green-600 mt-3">₹<%= interest %></p>
          <p class="text-xs sm:text-sm text-gray-600 mt-2">Earned on matured deposits</p>
        </div>
      </div>

      <!-- Matured RD Section -->
      <% if (rdclaim > 0) { %>

        <section class="bg-white p-4 sm:p-8 rounded-xl shadow-md border border-slate-200">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6 flex items-center gap-2">
            <svg class="w-5 sm:w-6 h-5 sm:h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8
                c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1
                c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0
                9 9 0 0118 0z">
              </path>
            </svg>
            Matured Recurring Deposits
          </h2>

          <!-- Made table responsive with horizontal scroll on mobile -->
          <div class="overflow-x-auto">
            <table class="w-full text-left text-xs sm:text-sm">
              <thead>
                <tr class="border-b-2 border-slate-200 bg-slate-50">
                  <th class="py-2 sm:py-3 px-2 sm:px-4">RD ID</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4">Monthly Amount</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4">Total Months</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4">Total Deposited</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4 text-right">Interest</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4 text-right">Maturity Amount</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4 text-center">Action</th>
                </tr>
              </thead>

              <tbody class="text-gray-700">
                <% rd_payout.forEach(pay => { %>
                  <% maturedRD.forEach(rd => { %>

                    <% if (
                      pay.rd_id === rd.rd_id &&
                      pay.status === "PENDING" &&
                      rd.duration_months === rd.paid_months
                    ) {

                      const totalDep = rd.monthly_amount * rd.paid_months;
                      const interest = (totalDep * rd.interest_rate * rd.paid_months) / (12 * 100);
                      const maturity = totalDep + interest;
                    %>

                      <tr class="border-b border-slate-100 hover:bg-slate-50">
                        <td class="py-2 sm:py-4 px-2 sm:px-4 font-semibold text-purple-600">#<%= rd.rd_id %></td>
                        <td class="py-2 sm:py-4 px-2 sm:px-4">₹<%= rd.monthly_amount %></td>
                        <td class="py-2 sm:py-4 px-2 sm:px-4"><%= rd.paid_months %>/<%= rd.duration_months %></td>
                        <td class="py-2 sm:py-4 px-2 sm:px-4">₹<%= totalDep %></td>
                        <td class="py-2 sm:py-4 px-2 sm:px-4 text-right text-green-600 font-semibold">+₹<%= interest.toFixed(2) %></td>
                        <td class="py-2 sm:py-4 px-2 sm:px-4 text-right text-purple-600 font-bold">₹<%= maturity.toFixed(2) %></td>
                        <td class="py-2 sm:py-4 px-2 sm:px-4 text-center">
                          <button
                            onclick="openRDModal(
                              '<%= rd.rd_id %>',
                              '<%= rd.monthly_amount %>',
                              '<%= rd.paid_months %>',
                              '<%= totalDep %>',
                              '<%= interest.toFixed(2) %>',
                              '<%= maturity.toFixed(2) %>',
                              '<%= rd.linked_account %>'
                            )"
                            class="bg-purple-600 hover:bg-purple-700 text-white px-2 sm:px-3 py-1 rounded text-xs font-semibold">
                            Claim
                          </button>
                        </td>
                      </tr>

                    <% } %>

                  <% }) %>
                <% }) %>
              </tbody>
            </table>
          </div>
        </section>

      <% } else { %>

        <section class="bg-white p-8 sm:p-12 rounded-xl shadow-md border border-slate-200 text-center">
          <svg class="w-12 sm:w-14 h-12 sm:h-14 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8
              c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1
              c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0
              9 9 0 0118 0z">
            </path>
          </svg>

          <h3 class="text-base sm:text-lg font-bold text-gray-900 mb-2">
            No Matured Recurring Deposits
          </h3>

          <p class="text-xs sm:text-sm text-gray-600">
            You currently have no recurring deposits eligible for maturity claim.
          </p>
        </section>

      <% } %>


      <!-- Matured FD Section -->
      <% if (fdclaim > 0) { %>

        <section class="bg-white p-4 sm:p-8 rounded-xl shadow-md border border-slate-200">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6 flex items-center gap-2">
            <svg class="w-5 sm:w-6 h-5 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8
                c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1
                c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0
                9 9 0 0118 0z">
              </path>
            </svg>
            Matured Fixed Deposits
          </h2>

          <!-- Made table responsive with horizontal scroll on mobile -->
          <div class="overflow-x-auto">
            <table class="w-full text-left text-xs sm:text-sm">
              <thead>
                <tr class="border-b-2 border-slate-200 bg-slate-50">
                  <th class="py-2 sm:py-3 px-2 sm:px-4">FD ID</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4">Principal Amount</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4">Tenure</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4">Maturity Date</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4 text-right">Interest</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4 text-right">Maturity Amount</th>
                  <th class="py-2 sm:py-3 px-2 sm:px-4 text-center">Action</th>
                </tr>
              </thead>

              <tbody class="text-gray-700">
                <% fd_payout.forEach(pay => { %>
                  <% maturedFD.forEach(fd => { %>

                    <% if (
                      pay.fd_id === fd.fd_id &&
                      pay.status === "PENDING" &&
                      new Date(fd.maturity_date) <= new Date()
                    ) {

                      const interest =
                        Number(fd.maturity_amount) - Number(fd.amount);
                    %>

                      <tr class="border-b border-slate-100 hover:bg-slate-50">
                        <td class="py-2 sm:py-4 px-2 sm:px-4 font-semibold text-blue-600">
                          #<%= fd.fd_id %>
                        </td>

                        <td class="py-2 sm:py-4 px-2 sm:px-4">
                          ₹<%= fd.amount %>
                        </td>

                        <td class="py-2 sm:py-4 px-2 sm:px-4">
                          <%= fd.duration_months %> months
                        </td>

                        <td class="py-2 sm:py-4 px-2 sm:px-4">
                          <%= new Date(fd.maturity_date).toDateString() %>
                        </td>

                        <td class="py-2 sm:py-4 px-2 sm:px-4 text-right text-green-600 font-semibold">
                          +₹<%= interest.toFixed(2) %>
                        </td>

                        <td class="py-2 sm:py-4 px-2 sm:px-4 text-right text-blue-600 font-bold">
                          ₹<%= fd.maturity_amount %>
                        </td>

                        <td class="py-2 sm:py-4 px-2 sm:px-4 text-center">
                          <button
                            onclick="openFDModal(
                              '<%= fd.fd_id %>',
                              '<%= fd.amount %>',
                              '<%= interest.toFixed(2) %>',
                              '<%= fd.maturity_amount %>',
                              '<%= fd.linked_account %>'
                            )"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-2 sm:px-3 py-1 rounded text-xs font-semibold">
                            Claim
                          </button>
                        </td>
                      </tr>

                    <% } %>

                  <% }) %>
                <% }) %>
              </tbody>
            </table>
          </div>
        </section>

      <% } else { %>

        <section class="bg-white p-8 sm:p-12 rounded-xl shadow-md border border-slate-200 text-center">
          <svg class="w-12 sm:w-14 h-12 sm:h-14 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2m0-8
              c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1
              c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0
              9 9 0 0118 0z">
            </path>
          </svg>

          <h3 class="text-base sm:text-lg font-bold text-gray-900 mb-2">
            No Matured Fixed Deposits
          </h3>

          <p class="text-xs sm:text-sm text-gray-600">
            You currently have no fixed deposits eligible for maturity claim.
          </p>
        </section>

      <% } %>

    </main>

  </div>

  <!-- RD Claim Modal -->
  <div id="rdModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full border border-slate-200 animate-in">
      <div class="bg-gradient-to-r from-purple-600 to-purple-700 px-6 sm:px-8 py-4 sm:py-6 rounded-t-xl">
        <h3 class="text-lg sm:text-2xl font-bold text-white">Claim RD Maturity</h3>
      </div>

      <form id="rdForm" class="p-4 sm:p-8 space-y-3 sm:space-y-4">
        <input type="hidden" id="rdId" name="rd_id">

        <div class="bg-slate-50 p-3 sm:p-4 rounded-lg border border-slate-200">
          <p class="text-xs text-gray-600 uppercase tracking-wider">RD ID</p>
          <p id="rdIdDisplay" class="text-base sm:text-lg font-bold text-purple-600 mt-1">#RD001</p>
        </div>

        <div class="grid grid-cols-2 gap-2 sm:gap-4">
          <div class="bg-slate-50 p-3 sm:p-4 rounded-lg border border-slate-200">
            <p class="text-xs text-gray-600 uppercase tracking-wider">Total Deposited</p>
            <p id="rdTotalDisplay" class="text-base sm:text-lg font-bold text-gray-900 mt-1">₹10,000</p>
          </div>
          <div class="bg-slate-50 p-3 sm:p-4 rounded-lg border border-slate-200">
            <p class="text-xs text-gray-600 uppercase tracking-wider">Interest Earned</p>
            <p id="rdInterestDisplay" class="text-base sm:text-lg font-bold text-green-600 mt-1">+₹500</p>
          </div>
        </div>

        <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-3 sm:p-4 rounded-lg border-2 border-purple-300">
          <p class="text-xs text-gray-700 uppercase tracking-wider font-semibold">Maturity Amount</p>
          <p id="rdMaturityDisplay" class="text-2xl sm:text-3xl font-bold text-purple-700 mt-2">₹10,500</p>
        </div>

        <div>
          <label class="text-xs sm:text-sm font-semibold text-gray-700 block mb-2">Credit To Account</label>
          <div id="rdAccountDisplay" class="w-full px-3 sm:px-4 py-2 sm:py-3 border border-slate-300 rounded-lg bg-slate-100 text-gray-800 font-medium text-sm">
            <!-- Account details will be populated here -->
          </div>
          <input type="hidden" id="rdAccount" name="account_id">
        </div>

        <label class="flex items-center gap-3 cursor-pointer">
          <input type="checkbox" id="rdConfirm" name="confirm" required class="w-4 h-4 rounded border-slate-300 text-purple-600 focus:ring-purple-500">
          <span class="text-xs sm:text-sm text-gray-700">I confirm to claim this matured RD</span>
        </label>

        <div class="flex gap-2 sm:gap-3 pt-3 sm:pt-4">
          <button type="button" onclick="closeRDModal()" class="flex-1 px-3 sm:px-4 py-2 sm:py-3 border border-slate-300 text-gray-700 rounded-lg text-xs sm:text-sm font-semibold hover:bg-slate-50 transition-colors">
            Cancel
          </button>
          <button type="submit" class="flex-1 px-3 sm:px-4 py-2 sm:py-3 bg-purple-600 text-white rounded-lg text-xs sm:text-sm font-semibold hover:bg-purple-700 transition-colors">
            Claim Now
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- FD Claim Modal -->
  <div id="fdModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full border border-slate-200 animate-in">
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 sm:px-8 py-4 sm:py-6 rounded-t-xl">
        <h3 class="text-lg sm:text-2xl font-bold text-white">Claim FD Maturity</h3>
      </div>

      <form id="fdForm" class="p-4 sm:p-8 space-y-3 sm:space-y-4">
        <input type="hidden" id="fdId" name="fd_id">

        <div class="bg-slate-50 p-3 sm:p-4 rounded-lg border border-slate-200">
          <p class="text-xs text-gray-600 uppercase tracking-wider">FD ID</p>
          <p id="fdIdDisplay" class="text-base sm:text-lg font-bold text-blue-600 mt-1">#FD001</p>
        </div>

        <div class="grid grid-cols-2 gap-2 sm:gap-4">
          <div class="bg-slate-50 p-3 sm:p-4 rounded-lg border border-slate-200">
            <p class="text-xs text-gray-600 uppercase tracking-wider">Principal</p>
            <p id="fdPrincipalDisplay" class="text-base sm:text-lg font-bold text-gray-900 mt-1">₹10,000</p>
          </div>
          <div class="bg-slate-50 p-3 sm:p-4 rounded-lg border border-slate-200">
            <p class="text-xs text-gray-600 uppercase tracking-wider">Interest Earned</p>
            <p id="fdInterestDisplay" class="text-base sm:text-lg font-bold text-green-600 mt-1">+₹500</p>
          </div>
        </div>

        <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-3 sm:p-4 rounded-lg border-2 border-blue-300">
          <p class="text-xs text-gray-700 uppercase tracking-wider font-semibold">Maturity Amount</p>
          <p id="fdMaturityDisplay" class="text-2xl sm:text-3xl font-bold text-blue-700 mt-2">₹10,500</p>
        </div>

        <div>
          <label class="text-xs sm:text-sm font-semibold text-gray-700 block mb-2">Credit To Account</label>
          <div id="fdAccountDisplay" class="w-full px-3 sm:px-4 py-2 sm:py-3 border border-slate-300 rounded-lg bg-slate-100 text-gray-800 font-medium text-sm">
            <!-- Account details will be populated here -->
          </div>
          <input type="hidden" id="fdAccount" name="account_id">
        </div>

        <label class="flex items-center gap-3 cursor-pointer">
          <input type="checkbox" id="fdConfirm" name="confirm" required class="w-4 h-4 rounded border-slate-300 text-blue-600 focus:ring-blue-500">
          <span class="text-xs sm:text-sm text-gray-700">I confirm to claim this matured FD</span>
        </label>

        <div class="flex gap-2 sm:gap-3 pt-3 sm:pt-4">
          <button type="button" onclick="closeFDModal()" class="flex-1 px-3 sm:px-4 py-2 sm:py-3 border border-slate-300 text-gray-700 rounded-lg text-xs sm:text-sm font-semibold hover:bg-slate-50 transition-colors">
            Cancel
          </button>
          <button type="submit" class="flex-1 px-3 sm:px-4 py-2 sm:py-3 bg-blue-600 text-white rounded-lg text-xs sm:text-sm font-semibold hover:bg-blue-700 transition-colors">
            Claim Now
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const closeSidebarBtn = document.getElementById('closeSidebarBtn');
    const sidebar = document.getElementById('sidebar');
    const sidebarBackdrop = document.getElementById('sidebarBackdrop');

    mobileMenuBtn.addEventListener('click', () => {
      sidebar.classList.remove('-translate-x-full');
      sidebarBackdrop.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    });

    closeSidebarBtn.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    sidebarBackdrop.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarBackdrop.classList.add('hidden');
      document.body.style.overflow = 'auto';
    });

    document.querySelectorAll('#sidebar a').forEach(link => {
      link.addEventListener('click', () => {
        sidebar.classList.add('-translate-x-full');
        sidebarBackdrop.classList.add('hidden');
        document.body.style.overflow = 'auto';
      });
    });

    // RD Modal Functions
    function openRDModal(rdId, monthly, months, total, interest, maturity, account) {
      document.getElementById('rdId').value = rdId;
      document.getElementById('rdIdDisplay').textContent = '#' + rdId;
      document.getElementById('rdTotalDisplay').textContent = '₹' + total;
      document.getElementById('rdInterestDisplay').textContent = '+₹' + interest;
      document.getElementById('rdMaturityDisplay').textContent = '₹' + maturity;
      document.getElementById('rdAccountDisplay').textContent = account;
      document.getElementById('rdAccount').value = account;
      document.getElementById('rdModal').classList.remove('hidden');
    }

    function closeRDModal() {
      document.getElementById('rdModal').classList.add('hidden');
    }

    // FD Modal Functions
    function openFDModal(fdId, principal, interest, maturity, account) {
      document.getElementById('fdId').value = fdId;
      document.getElementById('fdIdDisplay').textContent = '#' + fdId;
      document.getElementById('fdPrincipalDisplay').textContent = '₹' + principal;
      document.getElementById('fdInterestDisplay').textContent = '+₹' + interest;
      document.getElementById('fdMaturityDisplay').textContent = '₹' + maturity;
      document.getElementById('fdAccountDisplay').textContent = account;
      document.getElementById('fdAccount').value = account;
      document.getElementById('fdModal').classList.remove('hidden');
    }

    function closeFDModal() {
      document.getElementById('fdModal').classList.add('hidden');
    }
  </script>

</body>
