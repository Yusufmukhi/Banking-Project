        c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1
        c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0
        9 9 0 0118 0z">
      </path>
    </svg>
    Matured Recurring Deposits
  </h2>

  <div class="overflow-x-auto">
    <table class="w-full text-left text-sm">
      <thead>
        <tr class="border-b-2 border-slate-200 bg-slate-50">
          <th class="py-3 px-4">RD ID</th>
          <th class="py-3 px-4">Monthly Amount</th>
          <th class="py-3 px-4">Total Months</th>
          <th class="py-3 px-4">Total Deposited</th>
          <th class="py-3 px-4 text-right">Interest</th>
          <th class="py-3 px-4 text-right">Maturity Amount</th>
          <th class="py-3 px-4 text-center">Action</th>
        </tr>
      </thead>

      <tbody class="text-gray-700">
        <% rd_payout.forEach(pay => { %>
          <% maturedRD.forEach(rd => { %>

            <% if (
              pay.rd_id === rd.rd_id &&
              pay.status === "PENDING" &&
              rd.duration_months === rd.paid_months
            ) {

              const totalDep = rd.monthly_amount * rd.paid_months;
              const interest = (totalDep * rd.interest_rate * rd.paid_months) / (12 * 100);
              const maturity = totalDep + interest;
            %>

              <tr class="border-b border-slate-100 hover:bg-slate-50">
                <td class="py-4 px-4 font-semibold text-purple-600">#<%= rd.rd_id %></td>
                <td class="py-4 px-4">₹<%= rd.monthly_amount %></td>
                <td class="py-4 px-4"><%= rd.paid_months %>/<%= rd.duration_months %></td>
                <td class="py-4 px-4">₹<%= totalDep %></td>
                <td class="py-4 px-4 text-right text-green-600 font-semibold">+₹<%= interest.toFixed(2) %></td>
                <td class="py-4 px-4 text-right text-purple-600 font-bold">₹<%= maturity.toFixed(2) %></td>
                <td class="py-4 px-4 text-center">
                  <button
                    onclick="openRDModal(
                      '<%= rd.rd_id %>',
                      '<%= rd.monthly_amount %>',
                      '<%= rd.paid_months %>',
                      '<%= totalDep %>',
                      '<%= interest.toFixed(2) %>',
                      '<%= maturity.toFixed(2) %>',
                      '<%= rd.linked_account %>'
                    )"
                    class="bg-purple-600 hover:bg-purple-700 text-white px-3 py-1 rounded text-xs font-semibold">
                    Claim
                  </button>
                </td>
              </tr>

            <% } %>

          <% }) %>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>

<% } else { %>

