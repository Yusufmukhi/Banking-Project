          <button type="submit" class="flex-1 px-4 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors">
            Claim Now
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Success Modal -->
  <div id="successModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full border border-slate-200 text-center animate-in">
      <div class="bg-gradient-to-r from-green-500 to-emerald-600 px-8 py-6 rounded-t-xl">
        <div class="w-16 h-16 mx-auto rounded-full bg-white flex items-center justify-center">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>

      <div class="p-8 space-y-4">
        <h3 class="text-2xl font-bold text-gray-900">Claim Successful!</h3>
        <p class="text-gray-600">Your matured deposit amount has been credited to your account.</p>

        <div class="bg-green-50 p-4 rounded-lg border border-green-200 text-left space-y-2">
          <p class="text-sm"><span class="font-semibold">Amount Credited:</span> ₹<span id="successAmount">10,500</span></p>
          <p class="text-sm"><span class="font-semibold">Credited To:</span> <span id="successAccount">Savings Account</span></p>
          <p class="text-sm"><span class="font-semibold">Transaction ID:</span> <span id="successTxnId" class="text-blue-600 font-mono">TXN123456</span></p>
        </div>

        <button onclick="location.reload()" class="w-full px-4 py-3 bg-green-600 text-white rounded-lg font-semibold hover:bg-green-700 transition-colors">
          Done
        </button>
      </div>
    </div>
  </div>

  <script>
    // Helper function to find account from the accounts array
    function getAccountDetails(accountId) {
      const accounts = <%- JSON.stringify(accounts || []) %>;
      return accounts.find(acc => acc.account_id === parseInt(accountId));
    }

    function openRDModal(rdId, monthlyAmount, paidMonths, totalDep, interest, maturity, linkedAccountId) {
      const account = getAccountDetails(linkedAccountId);
      
      document.getElementById('rdId').value = rdId;
      document.getElementById('rdIdDisplay').textContent = '#RD' + String(rdId).padStart(4, '0');
      document.getElementById('rdTotalDisplay').textContent = '₹' + parseFloat(totalDep).toLocaleString();
      document.getElementById('rdInterestDisplay').textContent = '+₹' + parseFloat(interest).toLocaleString();
      document.getElementById('rdMaturityDisplay').textContent = '₹' + parseFloat(maturity).toLocaleString();
      
      if(account) {
        document.getElementById('rdAccountDisplay').textContent = account.account_number + ' - ' + account.account_type;
        document.getElementById('rdAccount').value = linkedAccountId;
      }
      
      document.getElementById('rdModal').classList.remove('hidden');
    }

    function openFDModal(fdId, principal, interest, maturity, linkedAccountId) {
      const account = getAccountDetails(linkedAccountId);
      
      document.getElementById('fdId').value = fdId;
      document.getElementById('fdIdDisplay').textContent = '#FD' + String(fdId).padStart(4, '0');
      document.getElementById('fdPrincipalDisplay').textContent = '₹' + parseFloat(principal).toLocaleString();
      document.getElementById('fdInterestDisplay').textContent = '+₹' + parseFloat(interest).toLocaleString();
      document.getElementById('fdMaturityDisplay').textContent = '₹' + parseFloat(maturity).toLocaleString();
      
      if(account) {
        document.getElementById('fdAccountDisplay').textContent = account.account_number + ' - ' + account.account_type;
        document.getElementById('fdAccount').value = linkedAccountId;
      }
      
      document.getElementById('fdModal').classList.remove('hidden');
    }

    function closeRDModal() {
      document.getElementById('rdModal').classList.add('hidden');
      document.getElementById('rdForm').reset();
    }

    function closeFDModal() {
      document.getElementById('fdModal').classList.add('hidden');
      document.getElementById('fdForm').reset();
    }

    // Form submissions
    document.getElementById('rdForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const rdId = document.getElementById('rdId').value;
      const customerId = '<%= id %>'; // Get from EJS template
      
      console.log("[v0] Submitting RD claim:", { rdId, customerId });
      
      const response = await fetch(`/claim/rd/${customerId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ rd_id: rdId })
      });
      
      const data = await response.json();
      console.log("[v0] RD Response:", data);
      
      if(response.ok && data.success) {
        closeRDModal();
        showSuccessModal('RD Maturity Claimed Successfully!', 'Your maturity amount has been credited to your account.');
      } else {
        alert('Error: ' + (data.error || 'Failed to claim'));
      }
    });

    document.getElementById('fdForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const fdId = document.getElementById('fdId').value;
      const customerId = '<%= id %>'; // Get from EJS template
      
      console.log("[v0] Submitting FD claim:", { fdId, customerId });
      
      const response = await fetch(`/claim/fd/${customerId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ fd_id: fdId })
      });
      
      const data = await response.json();
      console.log("[v0] FD Response:", data);
      
      if(response.ok && data.success) {
        closeFDModal();
        showSuccessModal('FD Maturity Claimed Successfully!', 'Your maturity amount has been credited to your account.');
      } else {
        alert('Error: ' + (data.error || 'Failed to claim'));
      }
    });

    function showSuccessModal(title, message) {
      alert(title + '\n' + message); // Replace with proper modal if needed
      location.reload();
    }
  </script>

